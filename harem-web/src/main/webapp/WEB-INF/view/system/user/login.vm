

<div>登陆$!{rc.realPath}</div>
<div class="container">
    <form class="form-signin" id="loginForm" action="/user/login" method="post" role="form">
        <div class="form-group" style="width:450px;">
            <h3 class="form-signin-heading">登录</h3>
            <div>
                <label class="sr-only" for="userName">用户名</label>
                <input type="text" class="form-control" placeholder="用户名" name="userName" required autofocus>
            </div>
            <div>
                <label class="sr-only" for="password">密码</label>
                <input class="form-control" name="password" type="password" placeholder="密码" required autofocus />
            </div>
            <label class="sr-only">$!message</label>
            <button class="btn btn-primary btn-block" type="submit">登录</button>
        </div>
    </form>
</div>
