<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
<h1>交易列表</h1>
    <form class="form-signin" id="travelOfficialListForm" name="travelOfficialListForm" action="$!utilWebconfig.getActionDefaultFontPath()/B2C/travelOfficialManage/list" method="GET" role="form">
        <div class="inputGroup whole">
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">游记名称</button>
                    </span>
                <input type="text" class="form-control" name="title" value="$!travelOfficialListQuery.title">
            </div>

            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">发布时间</button>
                    </span>
                <input type="text" class='form-control form-date dateInp' readonly name="beginDate" value="$!travelOfficialListQuery.beginDate">
                <span class="input-group-addon fix-border fix-padding dateInpCenter">至</span>
                <input type="text" class='form-control form-date dateInp' readonly name="endDate" value="$!travelOfficialListQuery.endDate">
            </div>

            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">地点</button>
                    </span>
                <input type="text" class="form-control" name="regionName" value="$!travelOfficialListQuery.regionName">
                <input type="hidden" class="form-control" name="regionId" value="$!travelOfficialListQuery.regionId">
            </div>
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">用户昵称</button>
                    </span>
                <input type="text" class="form-control" name="userName" value="$!travelOfficialListQuery.userName">
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">查询</button>
            </div>
            <div class="btn-group">
                <button type="reset" class="btn btn-primary">重置</button>
            </div>
        </div>

        <div class="tableGroup whole">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>游记名称</th>
                    <th>相关地点</th>
                    <th>用户昵称</th>
                    <th>状态</th>
                    <th>发布时间</th>
                    <th>更新时间</th>
                    <th>浏览量</th>
                    <th>点赞数</th>
                    <th>收藏数</th>
                    <th>操作</th>

                </tr>
                </thead>
                <tbody>
                    #foreach($travelOfficial in $travelOfficialList)
                    <tr>
                        <td>$!velocityCount</td>
                        <td>$!travelOfficial.title</td>
                        <td>$!travelOfficial.regionName</td>
                        <td>$!travelOfficial.user.userName</td>
                        <td>$!travelOfficial.travelStatus</td>
                        <td>$!travelOfficial.publishDate</td>
                        <td>$!travelOfficial.gmtModified</td>
                        <td>$!travelOfficial.browseNum</td>
                        <td>$!travelOfficial.praiseNum</td>
                        <td>$!travelOfficial.collectionNum</td>
                        <td>#TRAVELOFFICIAL_STATUS($!travelOfficial.travelStatus)</td>
                        <td>
                        <button type="button" class="btn btn-primary travelOfficialDetail" travelOfficialId="$travelOfficial.id">详情</button>
                        <button type="button" class="btn btn-primary travelOfficialBan"  travelOfficialId="$travelOfficial.id" joinStatus="$travelOfficial.joinStatus">#if($travelOfficial.joinStatus == 1) 禁止 #elseif($travelOfficial.joinStatus == 2) 允许 #end </button>
                        </td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("travelOfficialListForm")
    </form>
<script>
    $(".form-date").datetimepicker(
            {
                language:  "zh-CN",
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                format: "yyyy-mm-dd"
            });
    function openwin(url) {
        var a = document.createElement("a");
        a.setAttribute("href", url);
        a.setAttribute("target", "_blank");
        a.setAttribute("id", "camnpr");
        document.body.appendChild(a);
        a.click();
    }
    $(function(){
        $('.travelOfficialDetail').each(function(){
            $(this).click(function(){
                var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/B2C/travelOfficialManage/'+ $(this).attr('travelOfficialId');
                window.openwin(url);
            });

        });

        $('.travelOfficialBan').each(function(){
            $(this).click(function(){
                $(this).prop('disabled',true);
                $.post('$!utilWebconfig.getActionDefaultFontPath()'+'/B2C/travelOfficialManage/setJoinStatus/' + $(this).attr('travelOfficialId') ,{'joinStatus':$(this).attr('joinStatus')} ,function(data){
                    if(data.status == 200){
                        var msg = new $.zui.Messager('操作成功', {placement: 'center',type:'success',time:'1000'});
                        msg.show();
                        //TODO暂时先刷新页面
                        setTimeout(function(){
                            window.location.href = window.location.href;
                        },1050);
                        //window.location.href = window.location.href;
                    }else{
                        var msg = new $.zui.Messager('操作失败', {placement: 'center',type:'warning',time:'1000'});
                        msg.show();
                        $(this).prop('disabled',false);
                    }
                })
            });
        });
    });
</script>