<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
    <form class="form-signin" id="hotelDOListForm" name="hotelDOListForm" action="$!utilWebconfig.getActionDefaultFontPath()/B2C/hotelManage/list" method="GET" role="form">
        <div class="inputGroup whole">
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">景区名称</button>
                    </span>
                <input type="text" class="form-control" name="hotelName" value="$!hotelListQuery.hotelName">
            </div>
            <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">状态：</button>
                </span>
                <select class="form-control" name="hotelStatus">
                    <option value="0" >全部</option>
                    <option value="1" #if($!hotelListQuery.hotelStatus == 1) selected #end>启用</option>
                    <option value="2" #if($!hotelListQuery.hotelStatus == 2) selected #end>停用</option>
                </select>
            </div>
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">区域</button>
                    </span>
                <input type="text" class="form-control" name="regionName" value="$!hotelListQuery.regionName">
                <input type="hidden" class="form-control" name="regionId" value="$!hotelListQuery.regionId">
            </div>
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">等级</button>
                    </span>
                <input type="text" class="form-control" name="hotelNameOrTel" value="$!hotelListQuery.hotelNameOrTel">
            </div>

            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">创建时间</button>
                    </span>
                <input type="text" class='form-control form-date' placeholder='开始日期：yyyy-MM-dd' readonly name="beginDate" value="$!hotelListQuery.beginDate">
                <span class="input-group-addon fix-border fix-padding">至</span>
                <input type="text" class='form-control form-date' placeholder='结束日期：yyyy-MM-dd' readonly name="endDate" value="$!hotelListQuery.endDate">
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-primary submitBtn">查询</button>
            </div>
            <div class="btn-group">
                <button type="reset" class="btn btn-primary">重置</button>
            </div>
        </div>
        <button type="button" class="btn btn-primary scenicBtn">添加景区</button>
        <button type="button" class="btn btn-primary scenicBatchBtn" btnType="1">批量启用</button>
        <button type="button" class="btn btn-primary scenicBatchBtn" btnType="2">批量禁用</button>
        <div class="tableGroup whole">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th><input class="allChecked" name="allChecked" type="checkbox">全选</th>
                    <th>景区名称</th>
                    <th>状态</th>
                    <th>区域</th>
                    <th>基础价格</th>
                    <th>等级</th>
                    <th>操作</th>

                </tr>
                </thead>
                <tbody>
                    #foreach($hotel in $hotelDOList)
                    <tr class="subCheckedTR">
                        <td><input class="subChecked" type="checkbox" value="$!hotel.id"></td>
                        <td>
                            <p>$!hotel.name</p>
                            <p>商品编码:$!hotel.code</p>
                        </td>
                        <td>#HOTEL_STATUS($!hotel.status)</td>
                        <td>$!{hotel.locationProvinceName} $!{hotel.locationCityName} $!{hotel.locationTownName}</td>
                        <td>￥ 68.00起</td>
                        <td>
                            Tracy
                            18611111111
                        </td>
                        <td>
                        <button type="button" class="btn btn-primary hotelDetail" hotelId="$hotel.id">查看</button>
                        <button type="button" class="btn btn-primary hotelBtn"  hotelId="$hotel.id" status="$hotel.status">#if($hotel.status == 1) 停用 #elseif($hotel.status == 2) 启用 #end </button>
                        </td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("hotelDOListForm")
    </form>
<script>
    $(".form-date").datetimepicker(
            {
                language:  "zh-CN",
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                format: "yyyy-mm-dd"
            });
    function openwin(url) {
        var a = document.createElement("a");
        a.setAttribute("href", url);
        a.setAttribute("target", "_blank");
        a.setAttribute("id", "camnpr");
        document.body.appendChild(a);
        a.click();
    }
    $(function(){
        $('.submitBtn').click(function(){
            $('#hotelDOListForm').submit();
        });
        $('.hotelDetail').each(function(){
            $(this).click(function(){
                var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/B2C/hotelManage/'+ $(this).attr('hotelId');
                window.openwin(url);
            });

        });

        $('.hotelBtn').each(function(){
            $(this).click(function(){
                $(this).prop('disabled',true);
                $.post('$!utilWebconfig.getActionDefaultFontPath()'+'/B2C/hotelManage/setHotelStatus/' + $(this).attr('hotelId') ,{'hotelStatus':$(this).attr('status')} ,function(data){
                    if(data.status == 200){
                        layer.msg('操作成功', {
                            icon: 1,
                            time: 1500
                        }, function(){
                            window.location.href = window.location.href;
                        });
                    }else{
                        layer.msg('操作失败', {
                            icon: 2,
                            time: 2000
                        }, function(){
                            $(this).prop('disabled',false);
                        });

                    }
                })
            });
        });

        //全选
        $('.allChecked').click(function(){
            $('.subChecked').prop('checked',$(this).prop('checked'));
        });
        //单选
        $('.subCheckedTR').click(function(){
            $(this).find('.subChecked').prop('checked',!$(this).find('.subChecked').prop('checked'));
        });
        //批量
        $('.scenicBatchBtn').click(function(){
            $(this).prop('disabled',true);
            var arr = new Array();
            $('.subChecked:checked').each(function(){
                arr.push($(this).val());
            });
            console.log(arr);

            $.post('$!utilWebconfig.getActionDefaultFontPath()/B2C/hotelManage/setHotelStatusList',{hotelIdList:arr,hotelStatus:$(this).attr('btnType')},function(data){
                if(data&&data.status == 200){
                    layer.msg('操作成功', {
                        icon: 1,
                        time: 1500
                    }, function(){
                        window.location.href = window.location.href;
                    });
                }else{
                    layer.msg('操作失败', {
                        icon: 2,
                        time: 2000
                    }, function(){
                        $(this).prop('disabled',false);
                    });
                }
            })
        });
        //新建
        $('.scenicBtn').click(function(){
		
            var url = actionDefaultPath + '/B2C/scenicSpotManage/toAdd';
            window.openwin(url);
        });
    });
</script>