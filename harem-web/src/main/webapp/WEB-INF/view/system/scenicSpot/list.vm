<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
    <form class="form-signin" id="scenicDOListForm" name="scenicDOListForm" action="$!utilWebconfig.getActionDefaultFontPath()/B2C/scenicSpotManage/list" method="GET" role="form">
        <div class="inputGroup whole">
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">景区名称</button>
                    </span>
                <input type="text" class="form-control" name="tags" value="$!scenicPageQuery.tags">
            </div>
            <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">状态：</button>
                </span>
                <select class="form-control" name="status">
                    <option value="0" >全部</option>
                    <option value="1" #if($!scenicPageQuery.status == 1) selected #end>启用</option>
                    <option value="2" #if($!scenicPageQuery.status == 2) selected #end>停用</option>
                </select>
            </div>
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">区域</button>
                    </span>
               
            </div>
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">等级</button>
                    </span>
     			 <select class="form-control" name="level">
                    <option value="0" >全部</option>
                    <option value="1" #if($!scenicPageQuery.level == 1) selected #end>五星级</option>
                    <option value="2" #if($!scenicPageQuery.level == 2) selected #end>四星级</option>
                    <option value="1" #if($!scenicPageQuery.level == 3) selected #end>三星级</option>
                    <option value="2" #if($!scenicPageQuery.level == 4) selected #end>连锁酒店</option>
                </select>
            </div>

            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">创建时间</button>
                    </span>
                <input type="text" class='form-control form-date' placeholder='开始日期：yyyy-MM-dd' readonly name="beginTime" value="$!scenicPageQuery.beginTime">
                <span class="input-group-addon fix-border fix-padding">至</span>
                <input type="text" class='form-control form-date' placeholder='结束日期：yyyy-MM-dd' readonly name="endTime" value="$!scenicPageQuery.endTime">
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-primary submitBtn">查询</button>
            </div>
            <div class="btn-group">
                <button type="reset" class="btn btn-primary">重置</button>
            </div>
        </div>
        <button type="button" class="btn btn-primary scenicAddBtn">添加景区</button>
        <button type="button" class="btn btn-primary scenicBatchBtn" btnType="1">批量启用</button>
        <button type="button" class="btn btn-primary scenicBatchBtn" btnType="2">批量禁用</button>
        <div class="tableGroup whole">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th><input class="allChecked" name="allChecked" type="checkbox">全选</th>
                    <th>景区名称</th>
                    <th>状态</th>
                    <th>区域</th>
                    <th>基础价格</th>
                    <th>等级</th>
                    <th>操作</th>

                </tr>
                </thead>
                <tbody>
                    #foreach($scenic in $pageVo.itemList)
                    <tr class="subCheckedTR">
                        <td><input class="subChecked" type="checkbox" value="$!scenic.id"></td>
                        <td>
                            <p>$!scenic.name</p>
                            <p>商品编码:$!scenic.id</p>
                        </td>
                        <td>#SCENIC_STATUS($!scenic.status)</td>
                        <td>$!{scenic.locationProvinceName} $!{scenic.locationCityName} $!{scenic.locationTownName}</td>
                        <td>￥$!{scenic.price}起</td>
                        <td>
                           #SCENIC_LEVEL($!scenic.level)
                        </td>
                        <td>
                        <button type="button" class="btn btn-primary scenicDetail" scenicId="$scenic.id">查看</button>
                        #if($scenic.status == 1)
                        	<button type="button" class="btn btn-primary updateScenicStatus"  scenicId="$scenic.id" status="2">停用   </button>
                        #elseif($scenic.status == 2) 
                        	<button type="button" class="btn btn-primary updateScenicStatus"  scenicId="$scenic.id" status="1">启用  </button>
                        #end
                        </td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("scenicDOListForm")
    </form>
<script>
    $(".form-date").datetimepicker(
            {
                language:  "zh-CN",
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                format: "yyyy-mm-dd"
            });
    function openwin(url) {
        var a = document.createElement("a");
        a.setAttribute("href", url);
        a.setAttribute("target", "_blank");
        a.setAttribute("id", "camnpr");
        document.body.appendChild(a);
        a.click();
    }
    $(function(){
        $('.submitBtn').click(function(){
            $('#scenicDOListForm').submit();
        });
        $('.scenicDetail').click(function(){
                var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/B2C/hotelManage/'+ $(this).attr('scenicId');
                window.openwin(url);
        });

        $('.updateScenicStatus').click(function(){
                $(this).prop('disabled',true);
                $.post('$!utilWebconfig.getActionDefaultFontPath()'+'/B2C/scenicSpotManage/updateStatus/' + $(this).attr('scenicId') ,{'scenicStatus':$(this).attr('status')} ,function(data){
                    if(data.status == 200){
                        layer.alert('操作成功', {
                            icon: 1,
                            time: 1500
                        }, function(){
                            window.location.href = window.location.href;
                        });
                    }else{
                        layer.alert('操作失败', {
                            icon: 2,
                            time: 2000
                        }, function(){
                            window.location.href = window.location.href;
                        });

                    }
                })
           
        });

        //全选
        $('.allChecked').click(function(){
            $('.subChecked').prop('checked',$(this).prop('checked'));
        });
        //单选
        $('.subCheckedTR').click(function(){
            $(this).find('.subChecked').prop('checked',!$(this).find('.subChecked').prop('checked'));
        });
        //批量
        $('.scenicBatchBtn').click(function(){
            var arr = new Array();
            $('.subChecked:checked').each(function(){
                arr.push($(this).val());
            });
           
            if(arr==null||arr==""){
            	  layer.alert('请选择', {
                        icon: 2,
                        time: 2000
                    })
            }else{
            	 $.post('$!utilWebconfig.getActionDefaultFontPath()/B2C/scenicSpotManage/batchupdateStatus',{scenicIdList:arr,scenicStatus:$(this).attr('btnType')},function(data){
                if(data&&data.status == 200){
                    layer.alert('操作成功', {
                        icon: 1,
                        time: 1500
                    }, function(){
                        window.location.href = window.location.href;
                    });
                }else{
                    layer.alert('操作失败', {
                        icon: 2,
                        time: 2000
                    }, function(){
                        $(this).prop('disabled',false);
                    });
                }
           	 })
            	
            }
           
        });
        //新建
        $('.scenicAddBtn').click(function(){
            var url = actionDefaultPath + '/B2C/scenicSpotManage/toAdd';
            window.openwin(url);
        });
    });
</script>