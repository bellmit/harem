<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
    <form class="form-signin" id="restaurantDOListForm" name="restaurantDOListForm" action="$!utilWebconfig.getActionDefaultFontPath()/B2C/resourceManage/restaurant/list" method="GET" role="form">
        <div class="inputGroup whole">
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">餐厅名称</button>
                    </span>
                <input type="text" class="form-control" name="name" value="$!query.name">
            </div>
            <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">状态：</button>
                </span>
                <select class="form-control" name="status">
                    <option value="" >全部</option>
                    <option value="1" #if($!query.status == 1) selected #end>启用</option>
                    <option value="2" #if($!query.status == 2) selected #end>停用</option>
                </select>
            </div>
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">区域</button>
                    </span>
               
            </div>
			
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">联系人</button>
                    </span>
                <input type="text" class="form-control" name="hotelNameOrTel" value="$!hotelListQuery.hotelNameOrTel">
            </div>

            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">创建时间</button>
                    </span>
                <input type="text" class='form-control form-date dateInp' placeholder='' readonly name="beginTime" value="$!query.beginTime">
                <span class="input-group-addon fix-border fix-padding dateInpCenter">至</span>
                <input type="text" class='form-control form-date dateInp' placeholder='' readonly name="endTime" value="$!query.endTime">
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-primary submitBtn">查询</button>
            </div>
            <div class="btn-group">
                <button type="reset" class="btn btn-primary">重置</button>
            </div>
        </div>
        <button type="button" class="btn btn-primary restaurantAddBtn">添加餐厅</button>
        <button type="button" class="btn btn-primary restaurantBatchBtn" btnType="1">批量启用</button>
        <button type="button" class="btn btn-primary restaurantBatchBtn" btnType="2">批量禁用</button>
        <div class="tableGroup whole">
            <table class="table table-hover">
                <tr>
                    <th><input class="allChecked" name="allChecked" type="checkbox">全选</th>
                    <th>餐厅名称</th>
                    <th>状态</th>
                    <th>区域</th>
                    <th>基础价格</th>
                    <th>联系人</th>
                    <th>操作</th>

                </tr>
                    #foreach($restaurant in $pageVo.itemList)
                    <tr class="subCheckedTR">
                        <td><input class="subChecked" type="checkbox" value="$!restaurant.id"></td>
                        <td>
                            <p>$!restaurant.name</p>
                            <p>商品编码:$!restaurant.id</p>
                        </td>
                        <td>#SCENIC_STATUS($!restaurant.status)</td>
                        <td>$!{restaurant.locationProvinceName} $!{restaurant.locationCityName} $!{restaurant.locationTownName}</td>
                        <td>￥$!{restaurant.price}起</td>
                        <td>
                           #SCENIC_LEVEL($!restaurant.level)
                        </td>
                        <td>
                        #if($restaurant.status == 1)
                        	<button type="button" class="btn btn-primary toView" restaurantId="$restaurant.id">查看</button>
                        	<button type="button" class="btn btn-primary updateRestaurantStatus"  restaurantId="$restaurant.id" status="2">停用   </button>
                        #elseif($restaurant.status == 2)
                        	<button type="button" class="btn btn-primary toUpdate" restaurantId="$restaurant.id">编辑</button>
                        	<button type="button" class="btn btn-primary updateRestaurantStatus"  restaurantId="$restaurant.id" status="1">启用  </button>
                        #end
                        </td>
                    </tr>
                    #end
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("restaurantDOListForm")
    </form>
<script>
    $(".form-date").datetimepicker(
            {
                language:  "zh-CN",
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                format: "yyyy-mm-dd"
            });
    function openwin(url) {
        var a = document.createElement("a");
        a.setAttribute("href", url);
        a.setAttribute("target", "_blank");
        a.setAttribute("id", "camnpr");
        document.body.appendChild(a);
        a.click();
    }
    $(function(){
        $('.submitBtn').click(function(){
            $('#restaurantDOListForm').submit();
        });
        $('.toView').click(function(){
                var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/B2C/resourceManage/restaurant/edit/'+ $(this).attr('restaurantId');
                window.openwin(url);
        });
        $('.toUpdate').click(function(){
                var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/B2C/scenicSpotManage/edit/'+ $(this).attr('restaurantId');
                window.openwin(url);
        });

        $('.updateRestaurantStatus').click(function(){
                $.post('$!utilWebconfig.getActionDefaultFontPath()'+'/B2C/resourceManage/restaurant/updateStatus/' + $(this).attr('restaurantId') ,{'restaurantStatus':$(this).attr('status')} ,function(data){
                    if(data.status == 200){
                        layer.alert('操作成功', {
                            icon: 1,
                            time: 1500
                        }, function(){
                            window.location.href = window.location.href;
                        });
                    }else{
                        layer.alert('操作失败', {
                            icon: 2,
                            time: 2000
                        }, function(){
                            window.location.href = window.location.href;
                        });

                    }
                })
           
        });

        //全选
        $('.allChecked').click(function(){
            $('.subChecked').prop('checked',$(this).prop('checked'));
        });
        //单选
        $('.subCheckedTR').click(function(){
            $(this).find('.subChecked').prop('checked',!$(this).find('.subChecked').prop('checked'));
        });
        //批量
        $('.restaurantBatchBtn').click(function(){
            var arr = new Array();
            $('.subChecked:checked').each(function(){
                arr.push($(this).val());
            });
           
            if(arr==null||arr==""){
            	  layer.alert('请选择', {
                        icon: 2,
                        time: 2000
                    })
            }else{
            	$.post('$!utilWebconfig.getActionDefaultFontPath()/B2C/scenicSpotManage/batchupdateStatus',{scenicIdList:arr,scenicStatus:$(this).attr('btnType')},function(data){
                if(data&&data.status == 200){
                    layer.alert('操作成功', {
                        icon: 1,
                        time: 1500
                    }, function(){
                        window.location.href = window.location.href;
                    });
                }else{
                    layer.alert('操作失败', {
                        icon: 2,
                        time: 2000
                    }, function(){
                        $(this).prop('disabled',false);
                    });
                }
           	 })
            	
            }
           
        });
        //新建
        $('.restaurantAddBtn').click(function(){
            var url = actionDefaultPath + '/B2C/resourceManage/restaurant/toAdd';
			window.parent.tabsAdd("restaurantAdd", '/B2C/resourceManage/restaurant/toAdd', 3, "添加餐厅");
            //window.openwin(url);
        });
    });
</script>