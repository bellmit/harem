    {
	    top.tabsAdd('',"/B2C/orderManage/membershipCardOrder/"+id,2,"会员卡订单详情");
    }

    $(function(){
      	$(".detail").click(function() {
      		alert("detail!!!!!!!");
      	});
    });
</script>