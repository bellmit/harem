            <tbody>
            <tr>
                <td><span class="spColor">*</span>俱乐部名称</td>
                <td><input type="text" class="form-control" placeholder="请输入20个字以内" name="name"></td>
            </tr>
            <tr>
                <td><span class="spColor">*</span>俱乐部LOGO</td>
                <td>
                    <div class="logoView">
                        <img src="" class="img-circle" id="logoUrlUploadFileReturnImg">
                    </div>
                </td>
            </tr>
            <tr>
                <td><span class="spColor">*</span>俱乐部宣传图</td>
                <td>
                    <div class="propagandaView">
                        <img src="" id="picturePosterUploadFileReturnImg">
                    </div>
                </td>
            </tr>
            <tr>
                <td><span class="spColor">*</span>成员限额</td>
                <td><input type="text" class="form-control" placeholder="请输入数字" name="limitNum"></td>
            </tr>
            <tr>
                <td><span class="spColor">*</span>部长</td>
                <td>
                    <div class="userBtn">
                        <button type="button" class="btn btn-info">选择用户</button>
                        <input type="hidden" name="manageUserName" value="">
                        <input type="hidden" name="manageUserLogoUrl" value="">
                    </div>
                    <div class="userView">
                        <img src="">
                    #*TODO*#
                        <span>Tracy</span>
                    </div>
                </td>
            </tr>
            <tr>
                <td><span class="spColor">*</span>排序</td>
                <td><input type="text" class="form-control" placeholder="请输入数字，数字越大排序靠后"></td>
            </tr>
            <tr>
                <td><span class="spColor">*</span>状态</td>
                <td class="radioSel">
                    <div class="col-md-10">
                        <label class="radio-inline"> <input type="radio" name="joinStatus" value="1" checked=""> 允许加入 </label>
                        <label class="radio-inline"> <input type="radio" name="joinStatus" value="0"> 禁止加入 </label>
                    </div>
                </td>
            </tr>
            <tr>
                <td><span class="spColor">*</span>前台显示</td>
                <td class="radioSel">
                    <div class="col-md-10">
                        <label class="radio-inline"> <input type="radio" name="showStatus" value="1" checked=""> 显示 </label>
                        <label class="radio-inline"> <input type="radio" name="showStatus" value="0"> 隐藏 </label>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
        <div class="clubBotBtn">
            <div class="btn-group">
                <button class="btn btn-success" type="submit">添加$utilWebconfig.getActionDefaultFontPath()</button>
            </div>
            <div class="btn-group">
                <button class="btn">取消</button>
            </div>
        </div>
    </form>
</div>
