<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
    <form class="form-signin" id="tradeListForm" name="tradeListForm" action="$!utilWebconfig.getActionDefaultFontPath()/trade/tradeManage/order/list" method="GET" role="form">
        <div class="inputGroup whole">
                <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">交易号</button>
                    </span>
                    <input type="text" class="form-control" name="bizOrderId" value="$!tradeListQuery.bizOrderId">
                </div>
                <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">手机号</button>
                    </span>
                    <input type="text" class="form-control" name="phone" value="$!tradeListQuery.phone">
                </div>
                <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">会员名</button>
                    </span>
                    <input type="text" class="form-control" name="userName" value="$!tradeListQuery.userName">
                </div>
                <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">终端编号</button>
                    </span>
                    <input type="text" class="form-control" name="terminalName" value="$!tradeListQuery.terminalName">
                </div>
                <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">交易时间</button>
                    </span>
                    <input type="text" class='form-control form-date startDate dateInp' readonly name="beginDate" value="$!tradeListQuery.beginDate">
                    <span class="input-group-addon fix-border fix-padding dateInpCenter">至</span>
                    <input type="text" class='form-control form-date dateInp endDate' readonly name="endDate" value="$!tradeListQuery.endDate">
                </div>

                <div class="btn-group">
                    <button id="btnSubmit" class="btn btn-primary">查询</button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn exportBtn">导出</button>
                </div>
        </div>

        <div class="tableGroup whole">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>序号</th>
                    <th>交易号</th>
                    <th>流水号</th>
                    <th>部门</th>
                    <th>工号</th>
                    <th>终端编号</th>
                    <th>会员名</th>
                    <th>手机号</th>
                    <th>支付方式</th>
                    <th>付款金额</th>
                    <th>使用积分</th>
                    <th>赠送积分</th>
                    <th>交易时间</th>
                    <th>小票时间</th>
                    <th>查看</th>
                </tr>
                </thead>
                <tbody>
                    #foreach($order in $orderList)
                    <tr>
                        <td>$!velocityCount</td>
                        <td>$!order.bizOrderId</td>
                        <td>流水号--$!order.payOrderId</td>
                        <td>$!order.mallInfo.dt</td>
                        <td>$!order.mallInfo.jn</td>
                        <td>$!order.mallInfo.dc</td>
                        <td>$!order.userDO.nickname</td>
                        <td>$!order.mallInfo.pn</td>
                        <td>支付方式--#PAY_STATUS($!order.payStatus)</td>
                        <td>$!utilNum.moneyTransform($!order.actualTotalFee)</td>
                        <td>使用积分--$!order.sendPoint</td>
                        <td>赠送积分--$!order.point</td>
                        <td>$!utilDate.dateToString($!order.gmtCreated,"yyyy-MM-dd HH:mm:ss")</td>
                        <td>$!utilDate.longToString($!order.mallInfo.stt)</td>
                        <td><a class="orderLink" orderId="$!order.bizOrderId" href="javascript:void(0);">订单详情</a></td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("tradeListForm")
    </form>
<script>
    $("#tradeListForm").validate({
        rules:{
            bizOrderId:{
                number:true
            },
            phone:{
                number:true
            },
            terminalName:{
                number:true
            }
            /*endDate:{
                compareDate:".startDate"
            }*/
        },
        messages:{
            bizOrderId:{
                number:"请输入正确的交易号"
            },
            phone:{
                number:"请输入正确的手机号"
            },
            terminalName:{
                number:"请输入正确的终端编号"
            }
            /*endDate:{
                compareDate:"结束日期必须大于开始日期!"
            }*/
        },
        errorPlacement: function(error, element) {
            element.parent().parent().append (error);
        }
    })

    if($(".endDate").val() != ""){
        $(this).rules("add", { compareDate: ".startDate", messages: { compareDate: "结束日期必须大于开始日期!"} });
    }



    $(".form-date").datetimepicker(
            {
                language:  "zh-CN",
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                format: "yyyy-mm-dd"
            });


    $(function(){
        $('.orderLink').click(function(){
            top.tabsAdd('',$(this).attr('orderLinkUrl'),2,$(this).text());
        });
        $('#btnSubmit').click(function(){
            if($('.startDate').val() && $('.endDate').val()){
                if($('.startDate').val() > $('.endDate').val()){
                    $('.endDate').parent().parent().append('<label id="phone-error" class="error" for="phone">结束日期必须大于开始日期!</label>');
                    return false;
                }

            }
            if($("#tradeListForm").valid()){
                $('#tradeListForm').submit();
            }
        });
        $('.exportBtn').click(function(){
            if($("#tradeListForm").valid()){
            //top.tabsAdd('',actionDefaultPath + '/trade/tradeManage/order/' + $(this).attr('orderId'),2,$(this).text());
                layer.alert("此功能还未开通哦")
            }
        });

    });
</script>