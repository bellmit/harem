<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
<h1>直播管理</h1>
    <form class="form-signin" id="liveListForm" name="liveListForm" action="$!utilWebconfig.getActionDefaultFontPath()/B2C/liveManage/list" method="GET" role="form">
        <div class="inputGroup whole">
        <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">直播标签：</button>
                </span>
                    <select class="form-control" name="showStatus">
                        <option value="1" #if($!clubListQuery.showStatus == 1) selected #end>云南风光</option>
                        <option value="2" #if($!clubListQuery.showStatus == 2) selected #end>丽江夜景</option>
                    </select>
                </div>
           

            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">发布时间</button>
                    </span>
                <input type="text" class='form-control form-date' placeholder='开始日期：yyyy-MM-dd' readonly name="beginDate" value="$!liveListQuery.beginDate">
                <span class="input-group-addon fix-border fix-padding">至</span>
                <input type="text" class='form-control form-date' placeholder='结束日期：yyyy-MM-dd' readonly name="endDate" value="$!liveListQuery.endDate">
            </div>
            <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">状态：</button>
                </span>
                <select class="form-control" name="status">
                    <option value="1" #if($!liveListQuery.status == 1) selected #end>正常</option>
                    <option value="2" #if($!liveListQuery.status == 2) selected #end>违规</option>
                </select>
            </div>
                 <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">用户手机号</button>
                    </span>
                <input type="text" class="form-control" name="phoneNum" value="$!liveListQuery.phoneNum">
            </div>
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">用户昵称</button>
                    </span>
                <input type="text" class="form-control" name="name" value="$!liveListQuery.name">
            </div>
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">内容</button>
                    </span>
                <input type="text" class="form-control" name="content" value="$!liveListQuery.content">
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">查询</button>
            </div>
            <div class="btn-group">
                <button type="reset" class="btn btn-primary">重置</button>
            </div>
        </div>

        <div class="tableGroup whole">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>序号</th>
                    <th>用户昵称</th>
                    <th>用户手机号</th>
                    <th>内容</th>
                    <th>标签</th>
                    <th>点赞数</th>
                    <th>评论数</th>
                    <th>分享数</th>
                    <th>状态</th>
                    <th>发布时间</th>
                    <th>操作</th>

                </tr>
                </thead>
                <tbody>
                    #foreach($live in $liveList)
                    <tr>
                        <td>$!velocityCount</td>
                        <td>$!live.name</td>
                        <td>$!live.phone</td>
                        <td>$!live.content</td>
                        <td>$!live.liveTag</td>
                        <td>$!live.likeNum</td>
                        <td>$!live.commertNum</td>
                        <td>$!live.shareNum</td>
                        <td>$!live.status</td>
                        <td>$utilDate.dateToString($!live.gmtCreated,"yyyy-MM-dd HH:mm:ss")</td>
                        <td>
                        <button type="button" class="btn btn-primary liveDetail" liveId="$live.id">详情</button>
                        <button type="button" class="btn btn-primary " liveId="$live.id">图片</button>
                        </td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("liveListForm")
    </form>
<script>
  
    $(function(){
        $('.liveDetail').each(function(){
            $(this).click(function(){
                var url = actionDefaultPath + '/B2C/liveManage/'+ $(this).attr('liveId');
                window.openwin(url);
            });

        });
});
      
</script>