<link rel="stylesheet" href="$!utilWebconfig.getStaticResourcesPath()/resources/css/clubTable.css"/>
<script src="$!utilWebconfig.getStaticResourcesPath()/resources/js/ajaxfileupload.js" type="text/javascript"></script>
<header>
<h3>审核备注：（200字以内）</h3>
</header>
<article>
    <table class="table">
      <tbody>

        <tr>
          <td>
          	<textarea class="form-control" id="auditLogging" rows="2"></textarea></td>
          <td><button class="btn btn-lg btn-primary liveBan" type="button" liveId="$live.id">违规</button></td>
        </tr>
       
      </tbody>
    </table>    
  </article>
<div class="createClubTable whole">

        <table class="table">
            <tbody>
            
            <tr>
                <td>用户信息</td>
                <td>  <div class="logoView">
                        <img src="#if($!live.logoUrl) $!utilWebconfig.getTfsRootPath()$!club.logoUrl #end" class="img-circle"> $!live.name $!live.phone
                    </div>
                   
                 
            </tr>
            <tr>
                <td>直播内容</td>
                <td>
                    $!live.content
                </td>
            </tr>
            <tr> 
                <td></span>直播图片</td>
                <td>
                    <div class="propagandaView">
                        <img src="#if($!club.picturePoster) $!utilWebconfig.getTfsRootPath()$!club.picturePoster  #end">
                    </div>
                </td>
            </tr>
            <tr>
                <td>标签</td>
                <td> $!live.liveTag</td>
            </tr>
            <tr>
                <td>定位</td>
                <td>
                   $!live.location
                </td>
            </tr>
            <tr>
                <td>发布时间</td>
                <td>$utilDate.dateToString($!live.gmtCreated,"yyyy-MM-dd HH:mm:ss")</td>
            </tr>
            <tr>
                <td>状态</td>
                <td class="radioSel">
                    <div class="col-md-10">
                        <label class="radio-inline"> #if($!live.status == 1) 正常 #elseif($!live.status == 2) 违规 #end </label>
                    </div>
                </td>
            </tr>
            <tr>
                <td>审核记录</td>
                <td class="radioSel">
                   $!live.auditLogging
                </td>
            </tr>
            <tr>
                <td>评论数</td>
                <td> $!live.commertNum<button type="button" class="btn btn-primary clubActivity" clubId="$!club.id">查看</button></td>
            </tr>
            <tr>
                <td>点赞数</td>
                <td> $!live.likeNum</td>
            </tr>
            <tr>
                <td>分享数</td>
                <td>$!live.shareNum</td>
            </tr>
            <tr>
                <td>IP地址</td>
                <td>$!live.ipAddress</td>
            </tr>
            </tbody>
        </table>
</div>
<script>
   $('.liveBan').each(function(){
            $(this).click(function(){
            var liveId =$(this).attr('liveId');
            
            if(confirm(是否确认恢复该条内容状态为正常？")){
				
				   $.post('$!utilWebconfig.getActionDefaultFontPath()'+'/B2C/liveManage/setAudit/' +liveId  ,{'audit':$('#auditLogging').val()} ,function(data){
                    if(data.status == 200){
                        var msg = new $.zui.Messager('操作成功', {placement: 'center',type:'success',time:'1000'});
                        msg.show();
                        //TODO暂时先刷新页面
                        setTimeout(function(){
                            window.location.href = window.location.href;
                        },1050);
                       
                    }else{
                        var msg = new $.zui.Messager('操作失败', {placement: 'center',type:'warning',time:'1000'});
                        msg.show();
                        $(this).prop('disabled',false);
                    }
                    })
				
                }
			
				
            });
        });
   
  

</script>