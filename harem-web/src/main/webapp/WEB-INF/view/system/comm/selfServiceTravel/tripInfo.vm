<script type="text/javascript">
	$(".add-flight").click(function(){
		selectFlight();
	});
	$(".select-hotel").click(function(){
		selectHotel();
	});
	// 添加航班
	function selectFlight(){
		openModalForForm(actionDefaultPath + '/B2C/comm/selfServiceTravel/addFlight','添加航班 ',function() {
			var flights = win.getFlights();
			console.log(JSON.stringify(flights));
			//一般设定yes回调，必须进行手工关闭
			return true;
		});
	}
	// 选择酒店
	function selectHotel(){
		openModalForForm(actionDefaultPath + '/B2C/comm/selfServiceTravel/selectHotel','选择酒店 ',function() {
			var hot = win.getHotels(); 
			var content = $("#day_hotel");
			content.empty();
            for(var i in hot) {
				var btn = $("<button class='btn btn-info hotel_item'></button>");
				btn.attr("rId", hot[i].id);
				btn.attr("rName", hot[i].name);
				btn.click(function() {
					$(this).remove();
				});
				content.append(btn.text(hot[i].name));
			}
			//console.log(JSON.stringify(hot));
			//一般设定yes回调，必须进行手工关闭
			return true;
		});
    }
