<script type="text/javascript">
	// 日期输入框初始化
	$(".input-date").datetimepicker({
        language:  "zh-CN",
        weekStart: 1,
        todayBtn:  1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0,
        format: "yyyy-mm-dd"
    });
	$(".forward-plan-time").datetimepicker({
        language:  "zh-CN",
        weekStart: 1,
        todayBtn:  1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        format: "yyyy-mm-dd hh:ii"
    });
	$(".return-plan-time").datetimepicker({
        language:  "zh-CN",
        weekStart: 1,
        todayBtn:  1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        format: "yyyy-mm-dd hh:ii"
    });
	$(".forward-plan-time").change(function() {
		var start_date = $("#forwardDepartTime").val();
		var end_date = $("#forwardArriveTime").val();
		if(!start_date || !end_date) {
    		$("#forwardRunTime").val("");
		} else {
    		var start = new Date(start_date);
        	var end = new Date(end_date);
    		var run_time = CalendarUtils.getTimeDifferenceByMinute(start,end);
			$("#forwardRunTime").val(run_time);
		}
	});
	$(".return-plan-time").change(function() {
		var start_date = $("#returnDepartTime").val();
		var end_date = $("#returnArriveTime").val();
		if(!start_date || !end_date) {
    		$("#returnRunTime").val("");
		} else {
    		var start = new Date(start_date);
        	var end = new Date(end_date);
    		var run_time = CalendarUtils.getTimeDifferenceByMinute(start,end);
			$("#returnRunTime").val(run_time);
		}
	});
	function getFlightDetail() {
		var result = {};
		$(".form-control").each(function() {
			var id = $(this).attr("id");
			result[id] = $(this).val();
		});
		
    //	forwardCompanyPic;
    //	returnCompanyPic;
		return result;
	}
</script>