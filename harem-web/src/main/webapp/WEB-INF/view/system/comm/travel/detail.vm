  <div class="groupTravelBot">
    <button class="btn btn-primary save">保  存</button>
  </div>
  <script type="text/javascript">
  	var important_infos_ue;
	var extra_infos_ue;
    $(function() {
        window.UEDITOR_HOME_URL = "/resources/ueditor/";
    	important_infos_ue = UE.getEditor('importantInfos');
		extra_infos_ue = UE.getEditor('extraInfos');
    });
	function getExtraInfos() {
		return extra_infos_ue.getAllHtml();
	}
	function getImportantInfos() {
		return important_infos_ue.getAllHtml();
	}
    $(".save").click(function(){
        var result = {
			categoryId:$!{categoryId},
			options:$!{options},
            baseInfo:getBaseInfo(),
			#if($categoryId == 6)
            tripInfo:getTripInfo(),
            #elseif($categoryId == 7)
			tripPackageInfo:getTripPackageInfo(),
            #end
            priceInfo:getPriceInfo()
        };
		var params = {
			json:JSON.stringify(result),
			importantInfos:getImportantInfos(),
			extraInfos:getExtraInfos()
		};
        //console.log(JSON.stringify(params));
		//alert(JSON.stringify(params));
		#if($categoryId == 6)
        var url = "$!{utilWebconfig.getActionDefaultFontPath()}/B2C/comm/groupTravel/save";
        #elseif($categoryId == 7)
		var url = "$!{utilWebconfig.getActionDefaultFontPath()}/B2C/comm/selfServiceTravel/save";
        #end
        $.post(url,params,function(data){
			if(data.status == 200) {
				layer.alert('添加成功', {
                    time: 0 //不自动关闭
                    ,yes: function(index){
                        layer.close(index);
						top.tabTopClose(this);
                    }
                });
			} else {
				layer.alert('添加失败', {
					icon : 2
				});
			}
        },"json");
    });
  </script>