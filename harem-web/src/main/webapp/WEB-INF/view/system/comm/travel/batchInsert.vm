<div>
	#foreach($linePropertyType in $linePropertyTypes)
	<div class="input-group block" block-key="block_${linePropertyType.id}" block-type="${linePropertyType.id}">
		<span class="input-group-addon" block-name="${linePropertyType.name}">${linePropertyType.name}：</span>
		<input type="text" class="form-control item-${linePropertyType.id}-1" block-type="${linePropertyType.id}" id="item_${linePropertyType.id}_1" placeholder="请输入价格">
		<span class="input-group-addon">库存：</span>
		<input type="text" class="form-control item-${linePropertyType.id}-2" block-type="${linePropertyType.id}" id="item_${linePropertyType.id}_2" placeholder="请输入库存">
		<span class="input-group-addon">会员优惠：</span>
		<input type="text" class="form-control item-${linePropertyType.id}-3" block-type="${linePropertyType.id}" id="item_${linePropertyType.id}_3" placeholder="请输入会员优惠">
	</div>
	#end
</div>
<script type="text/javascript">
	function getData() {
		var blocks = [];
		$(".block").each(function(){
			var type = $(this).attr("block-type");
			blocks.push({
				type:type,
				price:$(".item-"+type+"-1").val() || 0,
				stock:$(".item-"+type+"-2").val() || 0,
				discount:$(".item-"+type+"-3").val() || 0
			});
		});
		return blocks;
	}
</script>