<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
<form class="form-signin" id="commodityListForm" name="commodityListForm" action="$!utilWebconfig.getActionDefaultFontPath()/B2C/commodityManage/list" method="GET" role="form">
    <div class="inputGroup whole">
        <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">分类：</button>
                </span>
            <select class="form-control" name="commStatus">
                <option value="0" >全部</option>
                <option value="1" #if($!commodityListQuery.commStatus == 1) selected #end>启用</option>
                <option value="2" #if($!commodityListQuery.commStatus == 2) selected #end>停用</option>
            </select>
        </div>
        <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">商品名称</button>
                    </span>
            <input type="text" class="form-control" name="commName" value="$!commodityListQuery.commName">
        </div>
        <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">商品编码</button>
                    </span>
            <input type="text" class="form-control" name="commCode" value="$!commodityListQuery.commCode">
        </div>
        <div class="input-group inpSingle">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">状态：</button>
                </span>
            <select class="form-control" name="commStatus">
                <option value="0" >全部</option>
                <option value="1" #if($!commodityListQuery.commStatus == 1) selected #end>启用</option>
                <option value="2" #if($!commodityListQuery.commStatus == 2) selected #end>停用</option>
            </select>
        </div>
        <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">发布时间</button>
                    </span>
            <input type="text" class='form-control form-date dateInp' placeholder='' readonly name="beginDate" value="$!commodityListQuery.beginDate">
            <span class="input-group-addon fix-border fix-padding dateInpCenter">至</span>
            <input type="text" class='form-control form-date dateInp' placeholder='' readonly name="endDate" value="$!commodityListQuery.endDate">
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-primary submitBtn">查询</button>
        </div>
        <div class="btn-group">
            <button type="reset" class="btn btn-primary">重置</button>
        </div>
    </div>
    <button type="button" class="btn btn-primary addCommodityBtn">添加商品</button>
    <button type="button" class="btn btn-primary commodityBatchBtn" btnType="1">批量启用</button>
    <button type="button" class="btn btn-primary commodityBatchBtn" btnType="2">批量禁用</button>
    <div class="tableGroup whole">
        <table class="table table-hover">
            <thead>
            <tr>
                <th><input class="allChecked" name="allChecked" type="checkbox">全选</th>
                <th>序号</th>
                <th>商品信息</th>
                <th>分类</th>
                <th>主题</th>
                <th>单价</th>
                <th>状态</th>
                <th>总库存</th>
                <th>发布时间</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
                #foreach($commodity in $commodityList)
                <tr class="subCheckedTR">
                    <td><input class="subChecked" type="checkbox" value="$!commodity.id"></td>
                    <td>$velocityCount</td>
                    <td>
                        <p><img src="$!commodity.picUrls"></p>
                        <p>$!commodity.title</p>
                        <p>商品编码:$!commodity.id</p>
                    </td>
                    <td>$!commodity.categoryId</td>
                    <td>主题</td>
                    <td>￥ $utilNum.moneyTransform($!commodity.price)起</td>
                    <td>#COMMODITY_STATUS($!commodity.status)</td>
                    <td>$!commodity.stockNum</td>
                    <td>$!utilDate.dateToString($!commodity.gmtCreated,"yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <button type="button" class="btn btn-primary commodityDetail" commodityId="$commodity.id" itemType="$commodity.itemType">查看</button>
                        <button type="button" class="btn btn-primary commodityBtn"  commodityId="$commodity.id" status="$commodity.status">#if($commodity.status == 1) 停用 #elseif($commodity.status == 2) 启用 #end </button>
                    </td>
                </tr>
                #end
            </tbody>
        </table>
    </div>
#*分页*#
    #parse("/page.vm")
    #pageStyle("commodityListForm")
</form>
<script>
    $(".form-date").datetimepicker(
            {
                language:  "zh-CN",
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                format: "yyyy-mm-dd"
            });
    function openwin(url) {
        var a = document.createElement("a");
        a.setAttribute("href", url);
        a.setAttribute("target", "_blank");
        a.setAttribute("id", "camnpr");
        document.body.appendChild(a);
        a.click();
    }
    $(function(){
        $('.submitBtn').click(function(){
            $('#commodityListForm').submit();
        });
        $('.commodityDetail').each(function(){
            $(this).click(function(){
                var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/B2C/commodityManage/'+ $(this).attr('commodityId') + '?itemType=' + $(this).attr('itemType');
                //TODO
                window.openwin(url);
            });

        });
        //单个启用停用
        $('.commodityBtn').each(function(){
            $(this).click(function(){
                $(this).prop('disabled',true);
                $.post('$!utilWebconfig.getActionDefaultFontPath()'+'/B2C/commodityManage/setCommStatus/' + $(this).attr('commodityId') ,{'commStatus':$(this).attr('status')} ,function(data){
                    if(data.status == 200){
                        layer.alert('操作成功', {
                            icon: 1,
                            time: 1500
                        }, function(){
                            window.location.href = window.location.href;
                        });
                    }else{
                        layer.alert('操作失败', {
                            icon: 2,
                            time: 2000
                        }, function(){
                            $(this).prop('disabled',false);
                        });

                    }
                })
            });
        });

        //全选
        $('.allChecked').click(function(){
            $('.subChecked').prop('checked',$(this).prop('checked'));
        });
        //单选
        $('.subCheckedTR').click(function(){
            $(this).find('.subChecked').prop('checked',!$(this).find('.subChecked').prop('checked'));
        });
        //批量
        $('.commodityBatchBtn').click(function(){
            $(this).prop('disabled',true);
            var arr = new Array();
            $('.subChecked:checked').each(function(){
                arr.push($(this).val());
            });
            if(arr.length == 0){
                layer.alert('请选择需要修改的记录', {
                    icon: 2,
                    time: 2000
                }, function(){
                    $(this).prop('disabled',false);
                });
            }
            $.post('$!utilWebconfig.getActionDefaultFontPath()/B2C/commodityManage/setCommStatusList',{commIdList:arr,commStatus:$(this).attr('btnType')},function(data){
                if(data&&data.status == 200){
                    layer.alert('操作成功', {
                        icon: 1,
                        time: 1500
                    }, function(){
                        window.location.href = window.location.href;
                    });
                }else{
                    layer.alert('操作失败', {
                        icon: 2,
                        time: 2000
                    }, function(){
                        $(this).prop('disabled',false);
                    });
                }
            })
        });
        //新建
        $('.addCommodityBtn').click(function(){
            var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/B2C/commodityManage/toAdd';
            window.openwin(url);
        });
    });
</script>