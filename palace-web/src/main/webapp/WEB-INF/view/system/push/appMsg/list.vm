#parse("/system/layout/layout-jiuxiu-meta.vm")
<link rel="stylesheet" href="$rs_js_css_path_jiuxiu/css/push-sms-list.css">

<div class="search-box">
    <form id="frmSearch" name="frmSearch">
        <div class="input-group">
				<span class="input-group-btn">
					<button class="btn btn-default" type="button">推送主题：</button>
				</span>
            <input type="text" class="form-control" name="pushSubject" value="">
        </div>
        <div class="input-group">
				<span class="input-group-btn">
		            <button class="btn btn-default" type="button">发起时间</button>
		        </span>
            <input type="text" class='form-control form-date date start-time' placeholder='' readonly name="startTime" value="">
            <span class="input-group-addon fix-border fix-padding date-addon">至</span>
            <input type="text" class='form-control form-date date end-time' placeholder='' readonly name="endTime" value="">
        </div>
        <div class="input-group">
				<span class="input-group-btn">
					<button class="btn btn-default" type="button">对象：</button>
				</span>
            <select class="form-control" name="pushType">
                <option value="0">全部</option>
                <option value="1">特定</option>
            </select>
        </div>
        <div class="input-group">
				<span class="input-group-btn">
					<button class="btn btn-default" type="button">状态：</button>
				</span>
            <select class="form-control" name="status">
                <option value="0">全部</option>
                <option value="1">特定</option>
            </select>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">查询</button>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-primary" id="btnReset">重置</button>
        </div>
    </form>
</div>
<div class="mb10">
    <button class="btn btn-primary" id="btnAdd">创建推送</button>
</div>
<table class="table table-hover table-bordered">
    <thead>
    <tr>
        <th>
            序号
        </th>
        <th>
            推送主题
        </th>
        <th>
            创建时间
        </th>
        <th>
            发送时间
        </th>
        <th>
            发送内容
        </th>
        <th>
            对象
        </th>
        <th>
            人数(到达)
        </th>
        <th>
            人数(查看)
        </th>
        <th>
            操作人ID
        </th>
        <th>
            状态
        </th>
        <th>
            操作
        </th>
    </tr>
    </thead>
    <tbody>
        #set($list = $pageVo.itemList)
        #foreach($entity in $list)
        <tr>
            <td>$entity.id</td>
            <td>$!entity.subject</td>
            <td>$!entity.createDate</td>
            <td>$!entity.pushDate</td>
            <td>$!entity.pushContent</td>
            <td>$!entity.pushModelType</td>
            <td>$!entity.sendPeople</td>
            <td>$!entity.seePeople</td>
            <td>$!entity.operationUserId</td>
            <td>$!entity.status</td>
            <td>
                <button type="button" class="btn btn-primary detail" detailid="0">详情</button>
                <button type="button" class="btn btn-primary entityDetail" appVersion="$!entity.appVersion "  entityCode="$!entity.code" entityId="$entity.id">详情</button>
            </td>
        </tr>
        #end
    </tbody>
</table>


<script type="text/javascript" src="$rs_js_css_path_jiuxiu/js/sea.js"></script>
<script type="text/javascript" src="$rs_js_css_path_jiuxiu/js/seajs-preload.js"></script>
<script type="text/javascript" src="$rs_js_css_path_jiuxiu/js/config.js"></script>
<script>seajs.use('module/md.push-sms-list.js');</script>


