<form class="" id="frmEdit">
    <!--<input type="hidden" id="tfs" value="http://192.168.1.209:7500/v1/tfs/">-->
    <table class="table form-table">
        <tr>
            <th>
                <input type="hidden" name="pushType" value="1">
                <span class="text-red">*</span>推送领域：</th>
            <td>
            <th>#DOMAIN_ZH($!entity.domain)</th>
            </td>
        </tr>
        <tr>
            <th><span class="text-red">*</span>推送主题：</th>
            <td>
            <th>$!entity.subject</th>
            </td>
        </tr>
        <tr>
            <th><span class="text-red">*</span>推送内容：</th>
            <td>
                <textarea class="form-control input-text" name="pushContent" id="content" rows="4" cols="20" >
                    $!entity.pushContent
                </textarea>
            </td>
        </tr>
        <tr>
            <th><span class="text-red">*</span>推送对象：</th>
            <td>
                #PUSH_OBJECT($!entity.pushModelType)
                <div class="upload-box">
                    <div class="imgbox file-box" data-imgUrl="csv.png" data-fileType=".csv">
                        <div class="canclick canclickL">
                            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==">
                        </div>
                        <div class="plhd"></div>
                        <div class="del">删除文件</div>
                        <a class="upldclik">
                            <input type="file" name="adpicfile" class="adpicfile single" id="logoUrlUploadFile">
                        </a>
                        <input type="hidden" name="pushModelFilePath" id="uploadFile" value="$!entity.pushModelFilePath">
                    </div>
                    #if($!isEdit)
                        <a href="$!entity.pushModelFilePath" class="btn btn-primary download">下载</a>
                    #end
                    <div class="tips">请填写特定的推送对象,选择CSV格式文件上传</div>
                </div>
            </td>
        </tr>
        <tr>
            <th><span class="text-red">*</span>推送时间：</th>
            <td>
                <input type="text" class="form-control input-text time"
                readonly="readonly" name="pushDate" id="time" value="">
            </td>
        </tr>
    </table>
    <div class="mb10" style="text-align:center;">
        <button type="button" class="btn btn-primary" style="width:100px" id="btnSave">保存</button>
    </div>
</form>

