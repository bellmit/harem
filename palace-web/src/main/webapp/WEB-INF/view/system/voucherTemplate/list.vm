<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
    <form class="form-signin" id="payListForm" name="payListForm" action="$!utilWebconfig.getActionDefaultFontPath()/B2C/voucherManage/pay/list" method="GET" role="form">
        <div class="inputGroup whole">
                <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">标题</button>
                    </span>
                    <input type="text" class="form-control" name="title" value="$!voucherListQuery.title">
                </div>
                <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">创建时间</button>
                    </span>
                    <input type="text" class='form-control form-date dateInp startDate' readonly name="beginDate" value="$!voucherListQuery.beginDate">
                    <span class="input-group-addon fix-border fix-padding dateInpCenter">至</span>
                    <input type="text" class='form-control form-date endDate dateInp' readonly name="endDate" value="$!voucherListQuery.endDate">
                </div>

                <div class="btn-group">
                    <button class="btn btn-primary" id="btnSubmit">查询</button>
                </div>
        </div>

        <div class="tableGroup whole">
            <table class="table table-hover">
                <tr>
                    <th>序号</th>
                    <th>优惠券编号</th>
                    <th>优惠券标题</th>
                    <th>优惠券类型</th>
                    <th>优惠券实体</th>
                    <th>优惠类型</th>
                    <th>状态</th>
                    <th>创建时间</th>
                </tr>
                    #foreach($pay in $payList)
                    <tr>
                        <td>$!velocityCount</td>
                        <td>$!pay.id</td>
                        <td>$!pay.bizOrderId</td>
                        <td>$!pay.subject</td>
                        <td>$!pay.buyerAccount</td>
                        <td>$!utilNum.moneyTransform($!pay.totalAmount)</td>
                        <td>#PAY_RECORD_STATUS($!pay.payStatus)</td>
                        <td>$!utilDate.dateToString($!pay.gmtPayment,"yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                    #end
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("payListForm")
    </form>
<script>
    $("#payListForm").validate({
        rules:{
            bizOrderId:{
                number:true
            }
            /*endDate:{
                compareDate:".startDate"
            }*/
        },
        messages:{
            bizOrderId:{
                number:"请输入正确的交易号"
            }
            /*endDate:{
                compareDate:"结束日期必须大于开始日期!"
            }*/
        },
        errorPlacement: function(error, element) {
            element.parent().parent().append (error);
        }
    })

    /*if($(".endDate").val() != ""){
        $(this).rules("add", {compareDate: ".startDate", messages: {compareDate: "结束日期必须大于开始日期!"} });
    }*/

    $(".form-date").datetimepicker(
            {
                language:  "zh-CN",
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                format: "yyyy-mm-dd"
            });


    $(function(){
        $('.orderLink').click(function(){
            top.tabsAdd('',$(this).attr('orderLinkUrl'),2,$(this).text());

        });
        $('#btnSubmit').click(function(){
            if($('.startDate').val() && $('.endDate').val()){
                if($('.startDate').val() > $('.endDate').val()){
                    if($("#phone-error").length != 0){
                        return false;
                    }else {
                        $('.endDate').parent().parent().append('<label id="phone-error" class="error" for="phone">结束日期必须大于开始日期!</label>');
                        return false;
                    }
                }

            }
            if($("#payListForm").valid()){
                $('#payListForm').attr('action',actionDefaultPath + '/trade/tradeManage/pay/list')
                $('#payListForm').submit();
            }
        });
        $('.exportBtn').click(function(){
            if($("#payListForm").valid()){
                if($("#payListForm").attr('listSize') > 0){
                    window.location = actionDefaultPath + '/trade/tradeManage/pay/export?'+ $("#payListForm").serialize();
                }else{
                    layer.msg('没有可导出的记录',{icon:5,time:2000});
                }
            }
        });

    });
</script>