        <div class="tableGroup whole">
            <table class="table table-hover">
                <tr>
                    <th>#</th>
                    <th>主题名称</th>
                    <th>类别</th>
                    <th>状态</th>
                    <th>创建时间</th>
                    <th>更新时间</th>
                    <th>操作</th>
                </tr>
                    #foreach($theme in $themeList)
                    <tr>
                        <td>$!velocityCount</td>
                        <td>$!theme.name</td>
                        <td>
                        	#if($!theme.outType == "1")
                        	直播
                        	#elseif($!theme.outType == "2")
                        	活动
                        	#elseif($!theme.outType == "3")
                        	俱乐部
                        	#elseif($!theme.outType == "4")
                        	会员
                        	#elseif($!theme.outType == "5")
                        	景区
                        	#elseif($!theme.outType == "6")
