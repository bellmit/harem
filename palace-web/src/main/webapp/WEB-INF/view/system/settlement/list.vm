<div class="topicbox">
	<form class="form-signin" id="topicListForm" name="topicListForm" action="$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/topic/list" method="GET" role="form">
		
		<div class="inputGroup whole">
			<div class="input-group inpSingle">
				<span class="input-group-btn">
                    <button class="btn btn-default" type="button">发起日期</button>
                </span>
				<input type="text" class="form-control form-date dateInp" readonly name="startTime" value="">
				<span class="input-group-addon fix-border fix-padding dateInpCenter">至</span>
				<input type="text" class="form-control form-date dateInp" readonly name="endTime" value="">
			</div>
			<div class="input-group inpSingle ">
				<span class="input-group-btn">
                    <button class="btn btn-default" type="button">结算类型</button>
                </span>
				<select data-placeholder="请选择..." class="chosen-select form-control" tabindex="2" name="">
                    <option value="">全部</option>
                    <option value="" >达人结算</option>
                    <option value="" >企业提现</option>
                </select>
			</div>
			<div class="btn-group">
				<button type="submit" class="btn btn-primary search">查询</button>
			</div>
			<div class="btn-group">
				<button type="button" class="btn btn-primary reset">重置</button>
			</div>
		</div>
		<div class="tableGroup whole">
			<table class="table table-hover topicTable">
				<tbody>
					<tr>
						<th>发起日期</th>
						<th>回盘时间</th>
						<th>结算批次号</th>
						<th>平台提交笔数</th>
						<th>银联成功笔数</th>
						<th>银联失败笔数</th>
						<th>平台计算结算费</th>
						<th>结算类型</th>
						<th>操作</th>
					</tr>
					<tr>
						<td>2016-06-01</td>
						<td>2016-06-01 10：25：10</td>
						<td>1</td>
						<td>112</td>
						<td>110</td>
						<td>2</td>
						<td>-273.00</td>
						<td>达人结算</td>
						<td>
							<button type="button" class="btn btn-primary detail" >详情</button>
							<button type="button" class="btn btn-primary reSubmit" >失败重新提交</button>
							<button type="button" class="btn btn-primary operateLog" >操作记录</button>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		#parse("/page.vm")
		#pageStyle("topicListForm")
	</form>
</div>
<script type="text/javascript" src="$rs_js_css_path_jiuxiu/js/plugin/datetimepicker.min.js" ></script>
<script type="text/javascript">
	
	(function(){
	
		$(".form-date").datetimepicker({
            language:  "zh-CN",
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0,
            format: "yyyy-mm-dd"
        });
	
		$('.detail').click(function(){
	        var url = '$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/settlement/detail';
			window.parent.tabsAdd("addTopic", url, 2, "结算单详情");
	    });
	    
	   $('.reSubmit').click(function(){
			layer.confirm('请在核对分账明细，并查看失败原因后再进行此操作？', {
			  btn: ['确认提交','取消']
			}, function(){
			  layer.msg('提交', {icon: 1});
			}, function(){
			  
			});
	    });
	    
	    $('.operateLog').click(function(){
	        var url = '$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/settlement/operateLog';
			layer.open({
			  type: 2,
			  title: "操作记录",
			  area: ['600px', '400px'],
			  content: url
			});
	    });
	})();

</script>
