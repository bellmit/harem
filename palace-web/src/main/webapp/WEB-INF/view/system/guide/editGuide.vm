<style type="text/css">
    .table th {
        text-align: right;
    }

    .table .w15 {
        width: 15%;
    }

    .table .w35 {
        width: 35%
    }

    .table .w85 {
        width: 85%
    }

    .upload-btn {
        position: relative;
    }

    .upload-btn .btn {
        width: 100px;
    }

    .upload-btn .upload-file {
        position: absolute;
        top: 0;
        left: 0;
        font-size: 25px;
        width: 102px;
        height: 33px;
        opacity: 0;
        filter: alpha(opacity=0);
    }

    .upload-view {
        margin-top: 10px;
    }

    .upload-view .img-wapper {
        position: relative;
        width: 150px;
        height: 75px;
        border: 1px solid #ccc;
    }

    .img-wapper.uploaded:hover .delete-btn {
        display: block;
    }

    .upload-view .upload-img {
        width: 100%;
        height: 100%;
    }

    .upload-view .delete-btn {
        display: none;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 30px;
        line-height: 30px;
        text-align: center;
        color: #fff;
        background: #000;
        opacity: 0.2;
        filter: alpha(opacity=20);
        cursor: pointer;
    }
</style>

<form id="frmGuidEdit" method="POST" action="$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/guideManage/editGuide">
    <input type="hidden" name="guideId" id="guideId" value="${guideScenicVO.guideId}">
    <fieldset>
        <legend>景区信息</legend>
    #*    <div class="btnBottomMargin">
            <button type="button" class="btn btn-primary" id="btnSelectScenic">选择景区</button>
        </div>*#
        <input type="hidden" id="scenicId" value="$!{guideScenicVO.scenicVO.id}" name="scenicId">
        <input type="hidden" id="subjectId" value="$!{guideScenicVO.scenicVO.subjectId}" name="subjectId">
        <table class="table table-bordered">
            <tr>
                <th class="w15">景区名称：</th>
                <td class="w35">
                    <span id="name" name="scenicName">$!{guideScenicVO.scenicVO.name}</span>
                </td>
                <th class="w15">资源编号：</th>
                <td class="w35">
                    <span id="number" name="scenicNumber">$!{guideScenicVO.scenicVO.id}</span>
                </td>
            </tr>
            <tr>
                <th class="w15">所在省、市、区：</th>
                <td class="w35">
                    <span id="location" name="location" id="location">$!{guideScenicVO.scenicVO.locationText}</span>
                </td>
                <th class="w15">等级：</th>
                <td class="w35"><span id="level" name="level" id="level">$!{guideScenicVO.scenicVO.level}</span></td>
            </tr>
            <tr>
                <th class="w15">主题：</th>
                <td class="w35"><span id="theme" name="theme" id="theme"></span></td>
                <th class="w15">地址：</th>
                <td class="w35"><span id="address" name="address" id="address">$!{guideScenicVO.scenicVO.address}</span></td>
            </tr>
            <tr>
                <th class="w15">经纬度：</th>
                <td class="w35"><span id="latlng" name="latlng" id="latlng">$!{guideScenicVO.scenicVO.locationX},$!{guideScenicVO.scenicVO.locationY}</span></td>
                <th class="w15"></th>
                <td class="w35"></td>
            </tr>
        </table>
        <table class="table table-bordered">
            <tr>
                <th><span class="spColor">*</span>导览列表头图：</th>
                <td>
                    <div class="upload-btn">
                        <button type="button" class="btn btn-success">上传图片</button>
                        <input type="file" name="file" class="upload-file" id="logoUrlUploadFile">
                    </div>
                    <div class="upload-view ">
                        <div class="img-wapper uploaded">
                            <img class="upload-img" id="logoUrlImg" imgurl=""
                                 src="$!utilWebconfig.getTfsRootPath()$!{guideScenicVO.listImg}"/>
                            <div class="delete-btn">删除</div>
                            <input type="hidden" id="listImg" name="listImg" value="$!{guideScenicVO.listImg}">
                        </div>
                        <span>图片大小不能超过500K，格式为JPG,JPEG,PNG，建议尺寸：750×360</span>
                    </div>
                </td>
                <th><span class="spColor">*</span>导览电子地图：</th>
                <td>
                    <div class="upload-btn">
                        <button type="button" class="btn btn-success">上传图片</button>
                        <input type="file" class="upload-file" id="mapUrlUploadfile">
                    </div>
                    <div class="upload-view">
                        <div class="img-wapper">
                            <img class="upload-img" id="mapUrlImg" imgurl=""
                                 src="$!utilWebconfig.getTfsRootPath()$!{guideScenicVO.guideImg}"/>
                            <div class="delete-btn">删除</div>
                            <input type="hidden" id="guideImg" name="guideImg" value="$!{guideScenicVO.guideImg}">
                        </div>
                        <span>图片大小不能超过500K，格式为JPG,JPEG,PNG，建议尺寸：750×360</span>
                    </div>
                </td>
                <th><span class="spColor">*</span>开场语音：</th>
                <td>
                    <div class="upload-btn">
                        <button type="button" id="btnSelectAudio" class="btn btn-success">选择语音</button>
                    </div>
                    <div class="upload-view">
                        <div class="img-wapper" id="audioWapper">
                            <img class="upload-img" imgurl=""
                                 src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="/>
                            <div class="delete-btn">删除</div>
                            <input type="hidden" id="guideAudio" name="guideAudio" value="$!{guideScenicVO.guideAudio}">
                            <input type="hidden" id="audioTime" name="audioTime" value="$!{guideScenicVO.audioTime}">
                        </div>
                        <span id="audioTimeVo">时长为：$!{guideScenicVO.audioTimeStr}</span>
                    </div>
                </td>
            </tr>
        </table>
    </fieldset>
    <fieldset>
        <legend>实用锦囊</legend>
        <table class="table">
            <tr>
                <th class="w15">景区门票信息：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="ticketInfo"
                              rows="3">$!{guideScenicVO.ticketInfo}</textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">营业时间：</th>
                <td class="w85">
                    <span id="yinyetime">周一至周五：8：00~21：00 周六周日：12：00~22：00</span>
                    <textarea class="form-control extra-info-item-text" name="openTime" rows="3"
                              id="openTime">$!{guideScenicVO.openTime}</textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">交通：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="traffic"
                              rows="3">$!{guideScenicVO.traffic}</textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">温馨提示：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="tips" rows="3"
                              id="tips">$!{guideScenicVO.tips}</textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">注意事项：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="cares"
                              rows="3">$!{guideScenicVO.cares}</textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">必玩必吃之事：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="haveTo"
                              rows="3">$!{guideScenicVO.haveTo}</textarea>
                </td>
            </tr>
        </table>
    </fieldset>
    <div class="btnBottomMargin" style="text-align:center;">
        <button type="button" class="btn btn-primary" style="width:150px" id="btnSubmit">全部保存</button>
    </div>
</form>
<script src="$utilWebconfig.getStaticResourcesPath()/resources/js/layerModal.js?version=21"></script>
<script src="$utilWebconfig.getStaticResourcesPath()/resources/js/upload.js?version=21"></script>
<script>
    layer.config({
        extend: 'extend/layer.ext.js',
        extend: ['skin/mySkin/style.css'],
        skin: 'layer-ext-mySkin'
    });
    var actionDefaultPath = '$utilWebconfig.getRootPath()';
    var tfsRootPath = '$utilWebconfig.getTfsRootPath()';
    var staticResourcesPath = '$utilWebconfig.getStaticResourcesPath()';
    var uploadFile = '$utilWebconfig.getRootPath()/upload/file';
    var uploadFiles = '$utilWebconfig.getRootPath()/upload/files';
</script>
<script type="text/javascript">
    var defaultImg = "data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==";
    function submitEdit(url, type, data) {
        //alert(1);
        $.ajax({
            url: url,
            type: type,
            data: data,
            success: function (res) {
                if (res.status == 200) {
                    layer.msg('操作成功', {
                        icon: 1,
                        time: 1500
                    });
                    setTimeout(function () {
                        window.location.href = window.location.href;
                    }, 1500);
                } else {
                    layer.msg('操作失败', {
                        icon: 2,
                        time: 2000
                    });
                    $(this).prop('disabled', false);
                }
            },
            error: function (xmlres, status, code) {
                layer.msg('操作失败', {
                    icon: 2,
                    time: 2000
                });
                $(this).prop('disabled', false);
            }
        });
    }
    function initUploadFile(fileId, hiddenId, imgId) {
        $(fileId).on("change", function () {
            fileUpload(fileId, 1, function (data) {
                if (data && data.status == 200) {
                    console.log(data.data);
                    $(hiddenId).val(data.data);

                    $(imgId).attr('src', tfsRootPath + data.data);

                    $(imgId).closest(".upload-wapper").addClass("uploaded");
                } else {
                    layer.msg('图片上传失败，请重试', {
                        icon: 2
                    });
                }
            });
        });
    }
    function initScenicSubject() {
        $.ajax({
            url: '$utilWebconfig.getActionDefaultFontPath()/jiuxiu/guideManage/scenic/selected',
            type: 'GET',
            data: {subjectId: $("#subjectId").val()},
            success: function (res) {
                if (res.status == 200) {
                    $("#theme").text(res.data.subjectName);
                } else {
                    layer.msg('操作失败', {
                        icon: 2,
                        time: 2000
                    });
                    $(this).prop('disabled', false);
                }
            },
            error: function (xmlres, status, code) {
                layer.msg('操作失败', {
                    icon: 2,
                    time: 2000
                });
                $(this).prop('disabled', false);
            }
        });
    }
    $(function () {
        //上传导览列表头图
        initUploadFile("#logoUrlUploadFile", "#listImg", "#logoUrlImg");

        //上传导览电子地图
        initUploadFile("#mapUrlUploadfile", "#guideImg", "#mapUrlImg");
        //选择景区
        initScenicSubject();

        //选择语音文件
        $('#btnSelectAudio').on("click", function () {
            openModalForForm('$utilWebconfig.getActionDefaultFontPath()/jiuxiu/attachmentManage/list/select', "选择语音文件", function () {
                var item = win.getItem();
                alert(JSON.stringify(item))
                if (item != null) {
                    $("#audioWapper").addClass("uploaded");
                    $("#guideAudio").val(item.fileKey);
                    $("#audioTime").val(item.duration);
                    $("#audioTimeVo").text(item.durationStr);
                }
                return true;
            });
        });
        //删除图片
        $(".img-wapper .delete-btn").on("click", function () {
            var wapper = $(this).closest(".img-wapper");
            wapper.removeClass("uploaded");
            wapper.find(".upload-img").attr("src", defaultImg);
            wapper.find("input[type='hidden']").val('');
        });
        //form
        $('#btnSubmit').on("click", function () {
            var data = $("#frmGuidEdit").serializeArray(); //自动将form表单封装成json
            submitEdit("$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/guideManage/addGuide", "post", data);
        });
    });
</script>
</body>

</html>
