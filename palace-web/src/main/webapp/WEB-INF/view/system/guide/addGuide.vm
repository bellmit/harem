<style type="text/css">
    .table th {
        text-align: right;
    }

    .table .w15 {
        width: 15%;
    }

    .table .w35 {
        width: 35%
    }

    .table .w85 {
        width: 85%
    }

    .upload-btn {
        position: relative;
    }

    .upload-btn .btn {
        width: 100px;
    }

    .upload-btn .upload-file {
        position: absolute;
        top: 0;
        left: 0;
        font-size: 25px;
        width: 102px;
        height: 33px;
        opacity: 0;
        filter: alpha(opacity=0);
    }

    .upload-view {
        margin-top: 10px;
    }

    .upload-view .img-wapper {
        position: relative;
