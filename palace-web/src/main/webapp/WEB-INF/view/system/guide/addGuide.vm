    .table th {
        text-align: right;
    }

    .table .w15 {
        width: 15%;
    }

    .table .w35 {
        width: 35%
    }

    .table .w85 {
        width: 85%
    }

    .upload-btn {
        position: relative;
    }

    .upload-btn .btn {
        width: 100px;
    }

    .upload-btn .upload-file {
        position: absolute;
