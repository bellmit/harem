<form id="frmGuidEdit">
    <fieldset>
        <legend>景区信息</legend>
        <div class="btnBottomMargin">
            <button type="button" class="btn btn-primary" id="btnSelectScenic">选择景区</button>
        </div>
        <table class="table table-bordered">
            <tr>
                <th class="w15">景区名称：</th>
                <td class="w35">
                    <span id="name" name="scenicName">景区景区景区</span>
                </td>
                <th class="w15">资源编号：</th>
                <td class="w35">
                    <span id="number" name="scenicNumber">编号编号</span>
                </td>
            </tr>
            <tr>
                <th class="w15">所在省、市、区：</th>
                <td class="w35">
                    <span id="location" name="location">北京市朝阳区</span>
                </td>
                <th class="w15">等级：</th>
                <td class="w35"><span id="level" name="level">Level11111</span></td>
            </tr>
            <tr>
                <th class="w15">主题：</th>
                <td class="w35"><span id="theme" name="theme">主题主题主题</span></td>
                <th class="w15">地址：</th>
                <td class="w35"><span id="address" name="address">地址地址地址地址地址地址</span></td>
            </tr>
            <tr>
                <th class="w15">经纬度：</th>
                <td class="w35"><span id="latlng" name="latlng">20.182731823,123.98123791823</span></td>
                <th class="w15"></th>
                <td class="w35"></td>
            </tr>
        </table>
        <table class="table table-bordered">
            <tr>
                <th><span class="spColor">*</span>导览列表头图：</th>
                <td>
                    <div class="upload-btn">
                        <button type="button" class="btn btn-success">上传图片</button>
                        <input type="file" name="file" class="upload-file" id="logoUrlUploadFile">
                    </div>
                    <div class="upload-view ">
                        <div class="img-wapper uploaded">
                            <img class="upload-img" id="logoUrlImg" imgurl=""
                                 src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="/>
                            <div class="delete-btn">删除</div>
                            <input type="hidden" id="logoUrl" name="logoUrl" value="">
                        </div>
                        <span>图片大小不能超过500K，格式为JPG,JPEG,PNG，建议尺寸：750×360</span>
                    </div>
                </td>
                <th><span class="spColor">*</span>导览电子地图：</th>
                <td>
                    <div class="upload-btn">
                        <button type="button" class="btn btn-success">上传图片</button>
                        <input type="file" class="upload-file" id="mapUrlUploadfile">
                    </div>
                    <div class="upload-view">
                        <div class="img-wapper">
                            <img class="upload-img" id="mapUrlImg" imgurl=""
                                 src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="/>
                            <div class="delete-btn">删除</div>
                            <input type="hidden" id="mapUrl" name="mapUrl" value="">
                        </div>
                        <span>图片大小不能超过500K，格式为JPG,JPEG,PNG，建议尺寸：750×360</span>
                    </div>
                </td>
                <th><span class="spColor">*</span>开场语音：</th>
                <td>
                    <div class="upload-btn">
                        <button type="button" id="btnSelectAudio" class="btn btn-success">选择语音</button>
                    </div>
                    <div class="upload-view">
                        <div class="img-wapper" id="audioWapper">
                            <img class="upload-img" imgurl=""
                                 src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="/>
                            <div class="delete-btn">删除</div>
                            <input type="hidden" id="audioUrl" name="audioUrl" value="">
                        </div>
                        <span id="audioTime">时长为：3.9</span>
                    </div>
                </td>
            </tr>
        </table>
    </fieldset>
    <fieldset>
        <legend>实用锦囊</legend>
        <table class="table">
            <tr>
                <th class="w15">景区门票信息：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="ticketInfo" rows="3"></textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">营业时间：</th>
                <td class="w85">
                    <span id="yinyetime">周一至周五：8：00~21：00 周六周日：12：00~22：00</span>
                </td>
            </tr>
            <tr>
                <th class="w15">交通：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="traffic" rows="3"></textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">温馨提示：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="warmTips" rows="3"></textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">注意事项：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="notice" rows="3"></textarea>
                </td>
            </tr>
            <tr>
                <th class="w15">必玩必吃之事：</th>
                <td class="w85">
                    <textarea class="form-control extra-info-item-text" name="bwbc" rows="3"></textarea>
                </td>
            </tr>
        </table>
    </fieldset>
    <div class="btnBottomMargin" style="text-align:center;">
        <button type="button" class="btn btn-primary" style="width:150px" id="btnSubmit">全部保存</button>
    </div>
</form>
<script src="$utilWebconfig.getStaticResourcesPath()/resources/js/layerModal.js?version=21"></script>
<script src="$utilWebconfig.getStaticResourcesPath()/resources/js/upload.js?version=21"></script>
<script>
    layer.config({
        extend: 'extend/layer.ext.js',
        extend: ['skin/mySkin/style.css'],
        skin: 'layer-ext-mySkin'
    });
    var actionDefaultPath = '$utilWebconfig.getRootPath()';
    var tfsRootPath = '$utilWebconfig.getTfsRootPath()';
    var staticResourcesPath = '$utilWebconfig.getStaticResourcesPath()';
    var uploadFile = '$utilWebconfig.getRootPath()/upload/file';
    var uploadFiles = '$utilWebconfig.getRootPath()/upload/files';
</script>
<script type="text/javascript">
    var defaultImg = "data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==";

    function initUploadFile(fileId, hiddenId, imgId) {
        $(fileId).on("change", function () {
            fileUpload(fileId, 1, function (data) {
                if (data && data.status == 200) {
                    console.log(data.data);
                    $(hiddenId).val(data.data);

                    $(imgId).attr('src', tfsRootPath + data.data);

                    $(imgId).closest(".upload-wapper").addClass("uploaded");
                } else {
                    layer.msg('图片上传失败，请重试', {
                        icon: 2
                    });
                }
            });
        });
    }

    $(function () {
        //上传导览列表头图
        initUploadFile("#logoUrlUploadFile", "#logoUrl", "#logoUrlImg");

        //上传导览电子地图
        initUploadFile("#mapUrlUploadfile", "#mapUrl", "#mapUrlImg");
        //选择景区
        $('#btnSelectScenic').on("click", function () {
            openModalForForm('$utilWebconfig.getStaticResourcesPath()/jiuxiu/guideManage/scenic/list', "选择景区", function () {
                var item = win.getItem();
                alert(JSON.stringify(item))
                if (item != null) {
                    $("#audioWapper").addClass("uploaded");
                    $("#audioUrl").val(item.url);
                    $("#audioTime").text(item.time);
                }
                return true;

            });
        });
        //选择语音文件
        $('#btnSelectAudio').on("click", function () {
            openModalForForm('$utilWebconfig.getStaticResourcesPath()/jiuxiu/attachmentManage/list/select', "选择语音文件", function () {
                var item = win.getItem();
                alert(JSON.stringify(item))
                if (item != null) {
                    $("#audioWapper").addClass("uploaded");
                    $("#audioUrl").val(item.url);
                    $("#audioTime").text(item.time);
                }
                return true;
            });
        });
        //删除图片
        $(".img-wapper .delete-btn").on("click", function () {
            var wapper = $(this).closest(".img-wapper");
            wapper.removeClass("uploaded");
            wapper.find(".upload-img").attr("src", defaultImg);
            wapper.find("input[type='hidden']").val('');
        });
    });
</script>
</body>

</html>
