//保存景点详情
function saveInfo() {
    var spotInfo = {
        id: $("#hdnId").val(),
        guideId: $("#hdnGuideId").val(),
        name: $("#spotName").val(),
        attrImg: $("#spotLogoUrl").val(),
        tourTime: $("#tourTime").val(),
        attrNo: $("#spotNumber").val()
    };
    var focusOrderJson = [];
    $(".audio-list .audio-item").each(function(i, d) {
        var item = $(d);
        var json = JSON.parse(item.find(".focus-json").val());
        console.log(json);
        json.inputFileTitle = item.find(".focus-name").val();

        focusOrderJson.push({
            name: json.inputFileTitle,
            audioTime: json.duration,
            audio: json.fileKey
        });
    });

    spotInfo.focusOrder = JSON.stringify(focusOrderJson);
    $.ajax({
        url: "$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/scenicManage/addTourist",
        type: "post",
        dataType: "json",
        data: spotInfo,
        success: function(data) {
            if (data.success) {
                $("#hdnId").val(data.value);
                $('#myTab li[data-target="#spotIntro"]').trigger("click");
            } else {
                layer.msg(data.msg, {
                    icon: 2
                });
            }
        },
        error: function() {
            layer.closeAll();
            layer.msg("保存失败。", {
                icon: 2
            });
        }
    });
}

