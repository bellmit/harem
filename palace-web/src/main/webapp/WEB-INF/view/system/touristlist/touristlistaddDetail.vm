                '       <div class="audio-info-item">' +
                '           <label>时长：</label>' +
                '           <span>' + data.durationStr + '</span>' +
                '       </div>' +
                '       <div class="audio-info-item">' +
                '            <label>看点名称：</label>' +
                '           <textarea style="display:none;" class="focus-json" id="' + data.id + '">' + str + '</textarea>' +
                '           <input type="text" class="focus-name" value="' + data.inputFileTitle + '">' +
