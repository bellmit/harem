                        console.log(data.data);
                        $(hiddenId).val(data.data);

                        $(imgId).attr('src', tfsRootPath + data.data);

                        $(imgId).closest(".upload-wapper").addClass("uploaded");
                    } else {
                        layer.msg('图片上传失败，请重试', {
                            icon: 2
                        });
                    }
                });
            });
        }

