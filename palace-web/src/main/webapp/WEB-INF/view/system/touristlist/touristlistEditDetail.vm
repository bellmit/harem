<script type="text/javascript">
var defaultImg = "data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==";

function initUploadFile(fileId, hiddenId, imgId) {
    $(fileId).on("change", function() {
        fileUpload(fileId, 1, function(data) {
            if (data && data.status == 200) {
                $(hiddenId).val(data.data);
                $(imgId).attr('src', tfsRootPath + data.data);
                $(imgId).closest(".img-wapper").addClass("uploaded");
            } else {
                layer.msg('图片上传失败，请重试', {
                    icon: 2
                });
            }
        });
    });
}

function addAudioItem(datas) {
    $.each(datas, function(index, data) {
        if ($("#" + data.id).length === 0) {
            var str = JSON.stringify(data);
            var audioItem =
                '<div class="audio-item">' +
                '   <div class="audio-img">' +
                '       <img class="upload-img" src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" alt="">' +
                '   </div>' +
                '   <div class="audio-info pull-left">' +
                '       <div class="audio-info-item">' +
                '           <label>时长：</label>' +
                '           <span>' + data.durationStr + '</span>' +
                '       </div>' +
                '       <div class="audio-info-item">' +
                '            <label>看点名称：</label>' +
                '           <textarea style="display:none;" class="focus-json" id="' + data.id + '">' + str + '</textarea>' +
                '           <input type="text" class="focus-name" value="' + data.inputFileTitle + '">' +
                '       </div>' +
                '   </div>' +
                '   <div class="pull-left">' +
                '    <button class="btn btn-primary delete-item">删除</button>' +
                '   </div>' +
                '</div>';

            $(audioItem).appendTo(".audio-list");
        }
    });
}
$(function() {
    $("#myTab li").on("click", function() {
        var target = $(this).data("target");
        if (target == "#spotIntro" && $("#id").val() == "0") {
            layer.alert("请先保存景点详情");
            return;
        }

        $("#myTab li").removeClass("active");
        $(".tab-content .tab-pane").removeClass("active")

        $(this).addClass("active");
        $(target).addClass("active");
    });
    //上传景点头图
    initUploadFile("#logoUrlUploadFile", "#attrImg", "#logoUrlImg");

    //选择语音文件
    $('#btnSelectAudio').on("click", function() {
        openModalForForm('$utilWebconfig.getActionDefaultFontPath()/jiuxiu/attachmentManage/list/select?multi=2&fileType=30', "选择语音文件",
            function() {
                var items = win.getItem();
                if (items.length === 0) {
                    layer.msg("请选择语音", {
                        icon: 2,
                        time: 1500
                    });
                    return false;
                }
                addAudioItem(items);
                return true;
            });
    });

    //删除图片
    $(".img-wapper .delete-btn").on("click", function() {
        var td = $(this).closest("td");

        td.find(".img-wapper").removeClass("uploaded");
        td.find(".upload-img").attr("src", defaultImg);
        td.find("input[type='hidden']").val('');
        td.find("input[type='file']").val('');
    });

    //删除语音文件
    $(".audio-list").on("click", ".delete-item", function() {
        var item = $(this).closest(".audio-item");
        layer.confirm("确认删除该语音？", function(index) {
            item.remove();
            layer.close(index);
        });
    });

    var validSpot = $("#frmSpotInfo").Validform({
        tiptype: 3,
        showAllError: true,
        ajaxPost: true
    });

    //保存景点详情
    $("#btnSaveSpotInfo").on("click", function() {
        var checked = validSpot.check();
        if ($(".audio-list .audio-item").length == 0) {
            layer.msg("请选择语音包", {
                icon: 2,
                time: 1500
            });
            return false;
        }

        if (checked) {
            saveInfo();
        }
    });

    $("#btnSavePicText").on("click", function() {
        $(this).prop("disabled", true);
        saveIntro();
    });

});


//保存景点详情
function saveInfo() {
    var spotInfo = {
        id: $("#id").val(),
        guideId: $("#guideId").val(),
        name: $("#name").val(),
        attrImg: $("#attrImg").val(),
        tourTime: $("#tourTime").val(),
        attrNo: $("#attrNo").val()
    };
    var focusOrderJson = [];
    $(".audio-list .audio-item").each(function(i, d) {
        var item = $(d);
        var json = JSON.parse(item.find(".focus-json").val());
        console.log(json);
        json.inputFileTitle = item.find(".focus-name").val();

        focusOrderJson.push({
            id: json.id,
            name: json.inputFileTitle,
            audioTime: json.duration,
            audio: json.fileKey
        });
    });

    spotInfo.focusOrder = JSON.stringify(focusOrderJson);
    $.ajax({
        url: "$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/scenicManage/updateTourist",
        type: "post",
        dataType: "json",
        data: spotInfo,
        success: function(data) {
            if (data.success) {
                $('#myTab li[data-target="#spotIntro"]').trigger("click");
            } else {
                layer.msg(data.msg, {
                    icon: 2
                });
            }
        },
        error: function(a, b, c) {
            console.dir(a);
            console.dir(b);
            console.dir(c);
            layer.closeAll();
            layer.msg("保存失败", {
                icon: 2
            });
        }
    });
}

//保存图文介绍
function saveIntro() {
    var picText = getPictureText();
    var data = {
        title: $("#spotIntroTitle").val().trim(),
        subTitle: $("#subSpotIntroTitle").val().trim(),
        picTextString: JSON.stringify(getPictureText()),
        uuidPicText: $("#uuidPicText").val(),
        attractionId: $("#id").val()
    }

    if (data.title.length == 0) {
        layer.msg("请输入景点介绍标题", {
            icon: 2,
            time: 1500
        });
        return false;
    }

    if (data.subTitle.length == 0) {
        layer.msg("请输入景点介绍标题", {
            icon: 2,
            time: 1500
        });
        return false;
    }

    if (picText.pictureTextItems.length == 0) {
        layer.msg("请添至少添加一段图文详情", {
            icon: 2,
            time: 1500
        });
        return false;
    }
    console.dir(data);
    $.ajax({
        url: "$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/scenicManage/savePictureText",
        type: "post",
        dataType: "json",
        data: data,
        success: function(res) {
            if (res.status == 200) {
                layer.msg("保存成功。", {
                    icon: 1,
                    time: 1500
                });

                setTimeout(function() {
                    closeAndFreshPrevFrame();
                }, 1500);
            } else {
                layer.msg("保存失败。", {
                    icon: 2,
                    time: 1500
                });
            }
        },
        error: function() {
            layer.msg("保存失败。", {
                icon: 2,
                time: 1500
            });
        }
    });
}
</script>
