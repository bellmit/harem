<style type="text/css">
        .table>thead th,
        .table>tbody td {
            text-align: center;
            vertical-align: middle;
        }
        .btnBottomMargin{
            margin-top: 10px;
        }

        .line-editor {
            width: 320px;
            padding: 10px;
