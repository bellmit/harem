        }

        .line .form-control {
            display: inline-block;
        }

        .line input {
            width: 100px;
            margin-right: 10px;
        }

        .line select {
            width: 150px;
        }

        .line .arrow {
            position: absolute;
            top: -45px;
            left: 50%;
            margin-left: -5px;
            width: 8px;
            height: 30px;
            background: #999;
        }

        .line .arrow>em {
            position: absolute;
            content: '';
            left: -50%;
            bottom: -12px;
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-top: 12px solid #999;
        }

        .line.start {
            margin-top: 0;
        }

        .line.start .arrow {
            display: none;
        }
    </style>
