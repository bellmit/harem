<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>回放管理</title>
    <link rel="stylesheet" href="../../src/css/zui.min.css">
    <link rel="stylesheet" href="../../src/css/datetimepicker.min.css">
    <link rel="stylesheet" href="http://s0.test.jiuxiulvxing.com/PC_Admin/src/css/common.css">
    <link rel="stylesheet" href="http://s0.test.jiuxiulvxing.com/PC_Admin/src/css/base.css">
    <link rel="stylesheet" href="../../src/css/live/livelist.css">
</head>
<body>
<div class="dialog">
    <div class="bgmeng"></div>
    <div class="dlgcont">
        <table>
            <tr>
                <td class="tit">权重：</td>
                <td>
                    <input type="text" id="priority"/>
                    <input type="hidden" id="rowId"/>
                    <input type="hidden" id="oldPriority"/>
                </td>
            </tr>
        </table>
        <div class="boxbtn">
            <button class="ok">确定</button>
            <button class="cancel">取消</button>
        </div>
    </div>
</div>

<div class="searchbox">
    <form id="playBackListForm" name="playBackListForm" method="post"
          action="$utilWebconfig.getStaticResourcesPath()/jiuxiu/liveAdmin/playBackList">
        <table>
            <tr>
                <td class="tit">达人昵称：</td>
                <td><input name="nickName" maxlength="30" /></td>
                <td class="tit">达人ID：</td>
                <td><input name="userId" maxlength="30" /></td>
                <td class="tit">直播分类：</td>
                <td><select name="liveCategory">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select></td>
                <td class="tit">状态：</td>
                <td><select name="status">
                    <option value="onSale">上架</option>
                    <option value="offSale">下架</option>
                    <option value="deleted">用户已删除</option>
                </select></td>
            </tr>
            <tr>
                <td class="tit">开始时间：</td>
                <td colspan="3">
                    <input type = "text" name = "startTime" value="2016-04-21" class = "form-date dateInp startTime inputxt">
                    &nbsp; &nbsp;至&nbsp; &nbsp;
                    <input type = "text" name = "endTime" value="2016-04-30"class = "form-date dateInp endTime inputxt">
                </td>
                <td class="tit">排序方式：</td>
                <td><select name="orderStyle">
                    <option value="0">时间倒序(最新回放在前)</option>
                    <option value="1">权重(权重值高在前)</option>
                    <option value="2">播放次数(次数多在前)</option>
                </select></td>
                <td colspan="2">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary submitBtn">查询</button>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-primary" id="btnReset">重置</button>
                    </div>
                </td>
            </tr>
        </table>
    </>
</div>

<div class="gridbox">
    <table class="table table-bordered table-hover" id="tbPlayBackList">
        <thead>
        <th>ID</th>
        <th>头图</th>
        <th>直播标题</th>
        <th>直播分类</th>

        <th>话题</th>
        <th>达人昵称</th>
        <th>达人ID</th>

        <th>开始时间</th>
        <th>结束时间</th>
        <th>时长</th>
        <th>观看次数</th>

        <th>权重</th>
        <th>状态</th>
        <th>操作</th>

        </thead>
        ## 直播列表
        <tbody>
            #foreach($item in $itemList)
            <tr>
                <td>$!{item.id}</td>
                <td>
                    <img src="$!{item.liveCover}" width="150" height="90">
                </td>
                <td>
                    $!{item.liveTitle}
                </td>
                <td>
                    $!{item.liveCategoryString}
                </td>
                <td>
                    $!{item.liveTitle}
                </td>
                <td>
                    $!{item.userDO.nickname}
                </td>
                <td>
                    $!{item.userId}
                </td>
                <td>
                    $!{item.startDate}
                </td>
                <td>
                    $!{item.endDate}
                </td>
                <td>
                    $!{item.replaySecond}
                </td>
                <td>
                    $!{item.viewCount}
                </td>
                <td>
                    $!{item.liveOrder}
                </td>
                <td>
                    $!{item.status}
                </td>
                <td>
                    <button type="button" class="btn btn-primary weight" liveOrder="$!{item.liveOrder}" liveRecordId="$!{item.liveRecordId}">编辑权重</button>
                    #if($item.status==$guideStatusMap.get("ONLINE").code)
                        <button type="button" class="btn btn-primary on" gmtModified="$!{item.gmtModified}" liveRecordId="$!{item.liveRecordId}">上架</button>
                    #end
                    #if($item.status==$guideStatusMap.get("OFFLINE").code)
                        <button type="button" class="btn btn-primary off" gmtModified="$!{item.gmtModified}" liveRecordId="$!{item.liveRecordId}">下架</button>
                    #end
                    <button type="button" class="btn btn-primary play" liveOrder="$!{item.liveOrder}" liveRecordId="$!{item.liveRecordId}">播放</button>
                </td>
            </tr>
            #end
        </tbody>

    </table>

    #*分页*#
    #parse("/page.vm")
    #pageStyle("playBackListForm")

</div>

<script type="text/javascript" src="http://s0.test.jiuxiulvxing.com/PC_Admin/src/js/jquery-1.11.0.js"></script>
<script type="text/javascript" src="http://s0.test.jiuxiulvxing.com/PC_Admin/src/js/plugin/zui.min.js"></script>
