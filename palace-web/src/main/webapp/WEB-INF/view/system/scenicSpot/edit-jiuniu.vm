<script charset="utf-8" src="$utilWebconfig.getStaticResourcesPath()/resources/js/img-list.js"></script>
<script>
	
	var tfsPath = '$utilWebconfig.getTfsRootPath()';
	
    function operateTicketType(){
    	//添加票型
    	$(".addTicketType").click(function(){
    		
    		if(!$("#ticketTypeText").val() && !$("#ticketTypeText").val().trim()){
    			return;
    		}
			var ticketTypeHTML = [];
			ticketTypeHTML.push('<p>');
				ticketTypeHTML.push('<span status="1" class="ticketSpan" >'+ $("#ticketTypeText").val() +'</span>');
				ticketTypeHTML.push('<label class="delTicketType" >x</label>');
			ticketTypeHTML.push('</p>');	
			
			$(".ticketTypeList").append(ticketTypeHTML.join(""));
			$("#ticketTypeText").val("");
		});
		
		//删除票型
		$(document).delegate(".delTicketType", 'click', function(){
			var s = $(this).prev();
			s.attr("status", "2");
			$(this).parent().css("display", "none");
			
		});
    }
    
    function getTicketTypeArr(){
    	var arr = [];
    	$(".ticketTypeList").find("span[class='ticketSpan']").each(function(){
    		var ticket = {
    			"title": $(this).text(),
    			"status": $(this).attr("status")
    		}
    		arr.push(ticket);
    	});
    	return arr;
    }
    
    function operateMap(){
    
	    $('.locationXYSelectBtn').click(function () {
            openBaiduMap(115.727899, 37.723961, function(data){
            	if (data) {
		            $("#locationX").val(data['pointX']);
		            $("#locationY").val(data['pointY']);
		        }	
            });
        });
    }
    
    function operateArea(){
    
    	var provinceFlag = false;
		var cityFlag = false;
		var areaFlag = false;
 		
 		//加载所有省份
		$.get('$!utilWebconfig.getActionDefaultFontPath()/AREA/list', 
			{
				'areaType': 'PROVINCE',
            	'areaParentCode': null
           	},
            function(data) {
                if (data&&data.status==200) {
                	data = data.data;
                    for (var i in data) {
                        var code = data[i].code;
                        var name = data[i].name;
                        var optionHTML = '<option value="'+ code +'">'+name+'</option>';
                        $("#provinceId").append(optionHTML);
                    }
                    provinceFlag = true;
                } else {
                    layer.alert('操作失败', {
                        icon: 2,
                        time: 2000
                    }, function() {

                    });
                }
        	}
        );
		
        
        //根据省份选择城市
        $('.provinceSelect').change(function(){
        
        	//设置省份隐藏域
			if($('.provinceSelect option:selected')){
                $('#provinceSelectName').val($('.provinceSelect option:selected').text());
            }
			
			//清空所有子元素
			if (parseInt($("#cityId").children().length) > 1) {
				$("#cityId").empty();
				$("#cityId").append('<option value="">请选择城市</option>');
			}
            //清空所有子元素
			if (parseInt($("#countyId").children().length) > 1) {
				$("#countyId").empty();
				$("#countyId").append('<option value="">请选择城市</option>');
			}
			
			$.get('$!utilWebconfig.getActionDefaultFontPath()/AREA/list', 
                {
                	'areaType': 'CITY',
                 	'areaParentCode': $('.provinceSelect option:selected').attr("value")
                },
                function(data) {
                    if (data&&data.status==200) {
                		data = data.data;
                        for (var i in data) {
                            var code = data[i].code;
                            var name = data[i].name;
                            var optionHTML = '<option value="'+ code +'">'+name+'</option>';
                            $("#cityId").append(optionHTML);
                        }
                        provinceFlag = true;
                    } else {
                        layer.alert('操作失败', {
                            icon: 2,
                            time: 2000
                        }, function() {

                        });
                    }
                }
            );
		});
		
		//根据城市选择区域
        $('.citySelect').change(function(){
        
        	//设置城市隐藏域
            if($('.citySelect option:selected')){
                $('#citySelectName').val($('.citySelect option:selected').text());
            }
            
            //清空所有子元素
			if (parseInt($("#countyId").children().length) > 1) {
				$("#countyId").empty();
				$("#countyId").append('<option value="">请选择城市</option>');
			}
			
			$.get('$!utilWebconfig.getActionDefaultFontPath()/AREA/list', 
                {'areaType': 'COUNTY',
                 'areaParentCode': $('.citySelect option:selected').attr("value")},

                function(data) {
                     if (data&&data.status==200) {
                		data = data.data;
                        for (var i in data) {
                            var code = data[i].code;
                            var name = data[i].name;
                            var optionHTML = '<option value="'+ code +'">'+name+'</option>';
                            $("#countyId").append(optionHTML);
                        }
                        provinceFlag = true;
                    } else {
                        layer.alert('操作失败', {
                            icon: 2,
                            time: 2000
                        }, function() {

                        });
                    }
                }
			);
        });
        
        //设置区的隐藏域
        $('.countySelect').change(function(){
			if($('.countySelect option:selected')){
                $('#countySelectName').val($('.countySelect option:selected').text());
            }		
        });	
    }
    
    function uploadLogo(tfsPath){
    	$(document).delegate('#logoUrlUploadFile','change',function(){
    		
    		var _self = this;
            fileUpload('#logoUrlUploadFile',1,function(data){
            	
                if(data && data.status==200){
                	
                	var imgUrl = tfsPath + data.data;
                	
                	var count = $(".logoView").length;
                	if(count == 0){
		            	var content = [];
		            	content.push('<div class="logoView">');
		            		content.push('<img  class="img-square uploadImgFile dimg" imgUrl="'+ data.data +'" src="'+ imgUrl +'" />');
		            	content.push('</div>');
		            	$(_self).parent().parent().append(content.join(""));
                	}else{
                		$(".logoView").find("img").attr({
                			"src": imgUrl,
                			"imgUrl": data.data
                		});
                	}
                	
                    $("#logoUrl").val(data.data);
                }else{
                    layer.alert('上传失败');
                }
            });
        });
    }
    
    
    (function(){
    	
    
    	operateArea();
    	
    	operateMap();
    	
    	operateTicketType();
    	
		//上传头图
		uploadLogo(tfsPath);
		
    	var imgList = new ImgList("imgList", tfsPath, 20);
		
		
        /*提交**/
        $("#saveScenicSpot").validate({
            rules: {
                'scenicVO.name': {
                    required: true
                },
                'locationProvinceId': {
                    required: true
                },
                'locationCityId': {
                    required: true
                },
                'locationTownId': {
                    required: true
                },
                'scenicVO.locationText': {
                    required: true
                },
                'scenicVO.locationX': {
                    required: true
                },
                'scenicVO.locationY': {
                    required: true
                },
                'scenicVO.level': {
                    required: true
                },
                'scenicVO.openTime':{
                	required: true
                }
            },
            messages: {
            	
            },
            errorPlacement: function (error, element) { // 指定错误信息位置

                if (element.is(':radio') || element.is(':checkbox')
                        || element.is(':input')) { // 如果是radio或checkbox
                    var eid = element.attr('name'); // 获取元素的name属性
                    error.appendTo(element.parent()); // 将错误信息添加当前元素的父结点后面
                } else {
                    error.insertAfter(element);
                }
            },
            submitHandler: function (form) {
            	
            	//景区票型
            	var tickets = $(".ticketTypeList").find("span");
            	if(!tickets || $(tickets).length < 1){
            		$(".ticketTypeTip").css({"color":"red", "display":""});
            		return;
            	}else{
            		$(".ticketTypeTip").css({"display":"none"});
            		
            		var ticketTypeArr = getTicketTypeArr();
            		$(".ticketListStr").val(JSON.stringify(ticketTypeArr));
            	}
            	
            	//景区主题
            	var theme = [];
            	$(".themeCheckBox:checked").each(function(){
            		theme.push($(this).val());
            	});
            	if(theme.length < 1 || theme.length > 3){
            		$(".themeTip").css({"color":"red", "display":""});
            		return;
            	}else{
            		$(".themeTip").css({"display":"none"});
            		$(".themeVal").val(theme.join("|"));
            	}
            	
            	//景区头图
            	var logoUrl = $("#logoUrl").val();
            	if(!logoUrl){
            		$(".logoUrlTip").css({"color":"red", "display":""});
            		return;
            	}else{
            		$(".logoUrlTip").css({"display":"none"});
            	}
            	
            	//景区图片
            	var picUrls = imgList.getPicUrls();
            	if(picUrls.length < 1){
            		$(".coverPicsTip").css({"color":"red", "display":""});
            		return;
            	}else{
            		$(".coverPicsTip").css({"display":"none"});
            		$('.coverPics').val(picUrls.join("|"));
            	}
            	
            	var options = {
                    url: actionDefaultPath + "/jiuniu/scenicSpotManage/save",
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        if (data.status == 200) {
                        	$("#scenicId").val(data.data.id);       
	                        $("#scenicImgId").trigger("click");
                        } else {
                            layer.msg(data.message, {
	                            icon: 2,
	                            time: 2000
	                        });
                        }
                    }
                };

                $("#saveScenicSpot").ajaxSubmit(options);
            },
            invalidHandler: function (form, validator) { // 不通过回调
                return false;
            }
        });
        
        $.validator.addMethod("locationX",function(value,element){
        	var lngRe=/^[-]?(\d|([1-9]\d)|(1[0-7]\d)|(180))(\.\d*)?$/g;
            return lngRe.test(value);
        }, "请输入正确的坐标");
        
        $.validator.addMethod("locationY",function(value,element){
        	var latRe=/^[-]?(\d|([1-8]\d)|(90))(\.\d*)?$/g;
            return latRe.test(value);
        }, "请输入正确的坐标");
        
         $(".saveAll").click(function(){
	    	var pictureText = getPictureText();
	    	
	    	var params = {
				json: JSON.stringify(pictureText),
				uuidPicText: $("#uuidPicText").val()
			};
			
	    	var url = actionDefaultPath + "/jiuniu/scenicSpotManage/savePictureText/"+ $("#scenicId").val();
	    	$.post(url, params, function(data){
				if(data.status == 200) {
					layer.alert('保存成功', {
		                time: 0 //不自动关闭
		                ,yes: function(index){
							window.location.href = "$!{utilWebconfig.getActionDefaultFontPath()}/jiuniu/scenicSpotManage/list"; 
		                }
		            });
				} else {
					layer.alert(data.message, {
						icon : 2
					});
				}
		    },"json");
	    });
    })();
</script>