            }
            $.get(actionDefaultPath + '/AREA/list/',{'areaType': $('.citySelect').attr("areaType"),'areaParentCode':$('.provinceSelect').val()},function(data){
                $('.citySelect option').remove();
                var optionList = '';
                if(data && data.status == 200){
