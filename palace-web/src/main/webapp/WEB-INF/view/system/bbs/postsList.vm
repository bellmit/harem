<link href="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.css" rel="stylesheet">
<script src="$utilWebconfig.getStaticResourcesPath()/resources/zui/lib/datetimepicker/datetimepicker.min.js" type="text/javascript"></script>
    <form class="form-signin" id="masterListForm" name="masterListForm" action="$!utilWebconfig.getActionDefaultFontPath()/GF/bbs/module/index" method="POST" role="form">
        <div class="inputGroup whole">
            <div class="input-group inpSingle">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">帖子名称</button>
                    </span>
                <input type="text" class="form-control" name="title" value="$!query.title">
            </div>

            <div class="input-group inpSingle">
               <span class="input-group-btn">
                    <button class="btn btn-default" type="button">发布状态：</button>
                </span>
                <select class="form-control" name="statuses">
					
                    <option value="0">全部</option>
                    <option value="10" #if($!gfTagVoQuery.status == 10) selected #end>上架</option>
                    <option value="20" #if($!gfTagVoQuery.status == 20) selected #end>下架</option>
                </select>
            </div>
			<div class="input-group inpSingle">
               <span class="input-group-btn">
                    <button class="btn btn-default" type="button">板块名称：</button>
                </span>
                <select class="form-control" name="moduleIds">
					
                    <option value="0">全部</option>
					#foreach($module in $modules)
						<option  value="${module.id }">${module.name }</option>
					#end
                </select>
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">查询</button>
            </div>
            <div class="btn-group">
                <button type="reset" class="btn btn-primary">重置</button>
            </div>
        </div>
		<div class="btnBottomMargin">
	        <button type="button" class="btn btn-primary addPostsBtn" id="addPostsBtn">新增帖子</button>
	    </div>
        <div class="tableGroup whole">
            <table class="table table-hover">
                <tr>
                    <th>ID</th>
                    <th>帖子标题</th>
                    <th>板块名称</th>
                    <th>达人昵称</th>
                    <th>发布状态</th>
                    <th>修改时间</th>
                    <th>操作</th>
                </tr>
                    #foreach($posts in $pageVo.itemList)
                    <tr class="subCheckedTR">
                        <td>$!{posts.postsDO.id}</td>
                        <td>$!{posts.postsDO.title}</td>
                        <td>$!{posts.moduleDO.name}</td>
                        <td>$!{posts.masterDO.name}</td>
                        <td>
							#if($!posts.postsDO.id == 10)上架#elseif($!posts.postsDO.id == 20)下架#end
						 </td>
                        <td>$!utilDate.dateToString($!posts.postsDO.gmtModified,"yyyy-MM-dd HH:mm:ss") </td>
                        <td>
                        <button type="button" class="btn btn-primary postsDetail" postsId="$posts.id">修改</button>
                        </td>
                    </tr>
                    #end
            </table>
        </div>
    #*分页*#
    #parse("/page.vm")
    #pageStyle("postsListForm")
    </form>
<script>
    $(".form-date").datetimepicker(
            {
                language:  "zh-CN",
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0,
                format: "yyyy-mm-dd"
            });
    function openwin(url) {
        var a = document.createElement("a");
        a.setAttribute("href", url);
        a.setAttribute("target", "_blank");
        a.setAttribute("id", "camnpr");
        document.body.appendChild(a);
        a.click();
    }
    $(function(){
        $('.postsDetail').each(function(){
            $(this).click(function(){
                var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/GF/bbs/initPosts?id='+ $(this).attr('postsId');
                //window.openwin(url);
                top.tabsAdd("addCommodityBtn",url,2,$(this).text())
            });

        });
        
        //新建
        $('.addPostsBtn').click(function(){
            var url = '$!utilWebconfig.getActionDefaultFontPath()' + '/GF/bbs/initPosts';
            top.tabsAdd("addCommodityBtn",url,2,$(this).text())
        });

    });
    
</script>