<div class="topicbox">
	<form class="form-signin" id="queryForm" name="topicListForm" action="$!utilWebconfig.getActionDefaultFontPath()/jiuxiu/audit/detail" method="GET" role="form">
		
		<div class="inputGroup whole">
			<div class="input-group inpSingle">
				<span class="input-group-btn">
                    <button class="btn btn-default" type="button">对账日期</button>
                </span>
				<input type="text" class="form-control form-date dateInp" readonly name="auditDate" value="$!query.auditDate">
			</div>
			<div class="input-group inpSingle ">
				<span class="input-group-btn">
                    <button class="btn btn-default" type="button">对账渠道</button>
                </span>
				<select data-placeholder="请选择..." class="chosen-select form-control" tabindex="2" name="auditType">
                    <option value="">全部</option>
                    #AUDIT_TYPE_OPTION($!{query.auditType})
                </select>
			</div>
			<div class="input-group inpSingle ">
				<span class="input-group-btn">
                    <button class="btn btn-default" type="button">对账结果</button>
                </span>
				<select data-placeholder="请选择..." class="chosen-select form-control" tabindex="2" name="auditResultStatus">
                    <option value="">全部</option>
                    <option value="1" #if($query.auditResultStatus == 1) selected="selected" #end >金额不一致</option>
                    <option value="2" #if($query.auditResultStatus == 2) selected="selected" #end >状态不一致</option>
                    <option value="3" #if($query.auditResultStatus == 3) selected="selected" #end >他有我无</option>
                    <option value="4" #if($query.auditResultStatus == 4) selected="selected" #end >我有他无</option>
                    <option value="5" #if($query.auditResultStatus == 5) selected="selected" #end >对账相符</option>
                </select>
			</div>
			<div class="btn-group">
				<button type="submit" class="btn btn-primary search">查询</button>
			</div>
			<div class="btn-group">
				<button type="button" class="btn btn-primary reset">重置</button>
			</div>
		</div>
		
		<div class="tableGroup whole">
			<table class="table table-hover topicTable">
				<tbody>
					<tr>
						<th>交易订单号</th>
						<th>交易时间</th>
						<th>渠道类型</th>
						<th>交易类型</th>
						<th>支付订单号</th>
						<th>渠道订单号</th>
						<th>平台支付金额</th>
						<th>渠道支付金额</th>
						<th>平台状态</th>
						<th>渠道状态</th>
						<th>对账状态</th>
					</tr>
					#foreach($item in $pageVo.itemList)
					<tr>
						<td>$!item.bizOrderId</td>
						<td>$utilDate.dateToString($!item.tradeDate,'yyyy-MM-dd HH:mm:ss')</td>
						<td>#AUDIT_TYPE($!item.auditType)</td>
						<td>#TRANS_TYPE($!item.transType)</td>
						<td>$!item.payOrderId</td>
						<td>$!item.outTradeNo</td>
						<td>$!item.tradeAmount</td>
						<td>$!item.oppositeTradeAmount</td>
						<td>#AUDIT_ORDER_TRADE_STATUS($!item.tradeStatus)</td>
						<td>#AUDIT_ORDER_TRADE_STATUS($!item.oppositeTradeStatus)</td>
						<td>#AUDIT_ORDER_STATUS($!item.auditOrderStatus)</td>
					</tr>
					#end
				</tbody>
			</table>
		</div>
		#parse("/page.vm")
		#pageStyle("queryForm")
	</form>
</div>
<script type="text/javascript" src="$rs_js_css_path_jiuxiu/js/plugin/datetimepicker.min.js" ></script>
<script type="text/javascript">
	
	(function(){
	
		$(".form-date").datetimepicker({
            language:  "zh-CN",
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0,
            format: "yyyy-mm-dd"
        });
        
        $('.reset').click(function(){
           $("#queryForm").find(":input").not(":button,:submit,:reset,:hidden").val("").removeAttr("checked").removeAttr("selected");
        });
	})();
	
	
</script>
